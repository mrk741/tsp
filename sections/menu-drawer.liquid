{{ 'menu-drawer.css' | asset_url | stylesheet_tag }}
{% style %}
    #shopify-section-{{ section.id }} {
        position: fixed;
        top: 0;
        inset-inline-start: 0;
        z-index: 0;
    }
    #shopify-section-{{ section.id }}:has(.drawer.open) {
        z-index: 50;
    }
{% endstyle %}

{% liquid 
    if section.settings.block_headings_style == 'caption-font' and settings.uppercase_caption
        assign uppercase_heading = true
    elsif section.settings.block_headings_style == 'body-font' and settings.uppercase_body 
        assign uppercase_heading = true
    elsif section.settings.block_headings_style == 'subheading-font' and settings.uppercase_subheadings
        assign uppercase_heading = true
    elsif section.settings.block_headings_style == 'secondary-heading' and settings.uppercase_secondary_headings
        assign uppercase_heading = true
    elsif section.settings.block_headings_style == 'section-heading' and settings.uppercase_section_headings
        assign uppercase_heading = true
    endif

    if section.settings.pinned_block != 'none'
        assign last_pinned_block_index = nil
        for block in section.blocks
            if block.type == "localization" and section.settings.pinned_block == 'localization'
                assign last_pinned_block_index = forloop.index0
            endif
            if block.type == "buttons" and section.settings.pinned_block == 'buttons'
                assign last_pinned_block_index = forloop.index0
            endif
            if block.type == "account" and section.settings.pinned_block == 'account'
                assign last_pinned_block_index = forloop.index0
            endif
            if block.type == "context_image" and section.settings.pinned_block == 'context_image'
                assign last_pinned_block_index = forloop.index0
            endif
            if block.type == "store_selector" and section.settings.pinned_block == 'store_selector'
                assign last_pinned_block_index = forloop.index0
            endif
        endfor
    endif
%}

<div class="drawer drawer--{{ section.settings.menu_drawer_position }} drawer-without-padding hide-scrollbar {% if settings.modal_enable_shadow %}modal--shadow{% endif %} {% if settings.modal_border %}modal--border{% endif %} modal color-{{ settings.drawer_color_scheme }}">
    <div class="scroll-area hide-scrollbar">
        <div class="button-wrapper menu-drawer-button-wrapper">
            <button type="button" class="button-close close-popup icon--large" data-modal-toggle-menu-dawer>
                {%- render 'glyphs_interface', icon: 'close' -%}
            </button>
        </div>
        <div class="menu-drawer-wrapper">
            <div class="menu-drawer{% if section.settings.show_lines_menu %} menu-with-lines{% endif %}">
                <div class="menu-drawer__header">
                    <p class="subheading-font{% if settings.uppercase_subheadings %} uppercase{% else %} none-uppercase{% endif %}{% if settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">{{ section.settings.heading }}</p>
                </div>
                <div>
                    {% if section.settings.menu != blank %}
                        <div class="main-drawer-menu">
                            {% liquid 
                                assign uppercase = false
                                if section.settings.parent_menu and section.settings.parent_uppercase
                                    assign uppercase = true
                                elsif section.settings.parent_menu == false and section.settings.uppercase
                                    assign uppercase = true
                                elsif section.settings.link_style == 'body-font' and settings.uppercase_body 
                                    assign uppercase = true
                                elsif section.settings.link_style == 'subheading-font' and settings.uppercase_subheadings
                                    assign uppercase = true
                                elsif section.settings.link_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                    assign uppercase = true
                                elsif section.settings.link_style == 'section-heading' and settings.uppercase_section_headings
                                    assign uppercase = true
                                elsif section.settings.link_style == 'page-title' and settings.uppercase_page_titles
                                    assign uppercase = true
                                endif

                                assign bolder_font = false
                                if section.settings.parent_menu and section.settings.parent_bolder_font
                                    assign bolder_font = true
                                elsif section.settings.bolder_font
                                    assign bolder_font = true
                                elsif section.settings.link_style == 'subheading-font' and settings.bolder_subheadings_font
                                    assign bolder_font = true
                                endif
                                if section.settings.parent_menu
                                    assign link_style = section.settings.parent_link_style
                                else
                                    assign link_style = section.settings.link_style
                                endif
                            %}
                            {% render 'drawer-menu', menu: section.settings.menu, horizontal_alignment: 'flex-start', object_type: section, blocks: section.blocks, event_type: section.settings.dropdown_event_type, show_nested: true, link_style: link_style, uppercase: uppercase, bolder_font: bolder_font, parent_menu: section.settings.parent_menu %}
                            {% if section.settings.parent_menu and section.settings.menu != blank %}
                                {% for link in section.settings.menu.links %}
                                    {% assign link_handle = link.title | downcase %}
                                    {% style %}
                                        .menu-drawer .menu--child {
                                            display: none;
                                        }
                                        .menu-drawer:has(.active-item.link-{{ link_handle }}) .menu.menu-{{ link_handle }} {
                                            display: block;
                                        }
                                        .menu-drawer:has(.menu.menu-{{ link_handle }}) .link-{{ link_handle }} {
                                            pointer-events: none;
                                            cursor: pointer;
                                        }
                                    {% endstyle %}
                                    {% liquid 
                                        assign uppercase = false
                                        if section.settings.uppercase
                                            assign uppercase = true
                                        elsif section.settings.link_style == 'body-font' and settings.uppercase_body 
                                            assign uppercase = true
                                        elsif section.settings.link_style == 'subheading-font' and settings.uppercase_subheadings
                                            assign uppercase = true
                                        elsif section.settings.link_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                            assign uppercase = true
                                        elsif section.settings.link_style == 'section-heading' and settings.uppercase_section_headings
                                            assign uppercase = true
                                        elsif section.settings.link_style == 'page-title' and settings.uppercase_page_titles
                                            assign uppercase = true
                                        endif
        
                                        assign bolder_font = false
                                        if section.settings.bolder_font
                                            assign bolder_font = true
                                        elsif section.settings.link_style == 'subheading-font' and settings.bolder_subheadings_font
                                            assign bolder_font = true
                                        endif
                                            assign link_style = section.settings.link_style
                                    %}
                                    {% render 'drawer-menu', menu: linklists[link_handle], horizontal_alignment: horizontal_alignment: 'flex-start', object_type: section, event_type: 'click', blocks: section.blocks, show_nested: true, link_style: section.settings.link_style, uppercase: uppercase, bolder_font: bolder_font, child_menu: true %}
                                {% endfor %}
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
                {%- for block in section.blocks -%}
                    {%- case block.type -%}
                        {% when 'text' %}
                            {%- if block.settings.text != blank -%}
                                <div class="{% if block.settings.show_bottom_line %}full-bottom-line{% endif %}" style="--spacing: {{ block.settings.top_spacing }}; --mobile-spacing: {{ block.settings.mobile_top_spacing }};" {{ block.shopify_attributes }}>
                                    {% liquid 
                                        assign uppercase = false
                                        if block.settings.text_style == 'body-font' and settings.uppercase_body 
                                            assign uppercase = true
                                        elsif block.settings.text_style == 'subheading-font' and settings.uppercase_subheadings
                                            assign uppercase = true
                                        elsif block.settings.text_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                            assign uppercase = true
                                        elsif block.settings.text_style == 'caption-font' and settings.uppercase_caption
                                            assign uppercase = true
                                        elsif block.settings.text_style == 'section-heading' and settings.uppercase_section_headings
                                            assign uppercase = true
                                        endif
                                        assign uppercase_subheading = false
                                        if block.settings.subheading_style == 'caption-font' and settings.uppercase_caption 
                                            assign uppercase_subheading = true
                                        elsif block.settings.subheading_style == 'body-font' and settings.uppercase_body 
                                            assign uppercase_subheading = true
                                        elsif block.settings.subheading_style == 'subheading-font' and settings.uppercase_subheadings
                                            assign uppercase_subheading = true
                                        elsif block.settings.subheading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                            assign uppercase_subheading = true
                                        elsif block.settings.subheading_style == 'section-heading' and settings.uppercase_section_headings
                                            assign uppercase_subheading = true
                                        endif
                                        assign block_uppercase_heading = false
                                        if block.settings.heading_style == 'caption-font' and settings.uppercase_caption
                                            assign block_uppercase_heading = true
                                        elsif block.settings.heading_style == 'body-font' and settings.uppercase_body 
                                            assign block_uppercase_heading = true
                                        elsif block.settings.heading_style == 'subheading-font' and settings.uppercase_subheadings
                                            assign block_uppercase_heading = true
                                        elsif block.settings.heading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                            assign block_uppercase_heading = true
                                        elsif block.settings.heading_style == 'section-heading' and settings.uppercase_section_headings
                                            assign block_uppercase_heading = true
                                        endif
                                    %}
                                    {% if block.settings.subheading != blank %}
                                        <p class="block-subheading {{ block.settings.subheading_style }}{% if uppercase_subheading %} uppercase{% endif %}{% if block.settings.subheading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                                            {% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ block.settings.subheading }}{% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                        </p>
                                    {% endif %}
                                    {% if block.settings.heading != blank %}
                                        <p class="block-heading {{ block.settings.heading_style }}{% if block_uppercase_heading %} uppercase{% endif %}{% if block.settings.heading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                                            {% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ block.settings.heading }}{% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                        </p>
                                    {% endif %}
                                    <div class="{{ block.settings.text_style }}{% if uppercase %} uppercase{% endif %} richtext rte link-underline 
                                        {% if block.settings.text_style == 'subheading-font' %}{% if settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}{% if settings.bolder_subheadings_font %} bold{% endif %}{% endif %}">
                                        {{ block.settings.text }}
                                    </div>
                                </div>
                            {%- endif -%}
                        {% when 'social_media' %}
                            {% if settings.instagram_link != blank or settings.x_link != blank or settings.tiktok_link != blank or settings.snapchat_link != blank or settings.pinterest_link != blank or settings.tumblr_link != blank or settings.youtube_link != blank or settings.vimeo_link != blank or settings.reddit_link != blank or settings.trustpilot_link != blank or settings.tripadvisor_link != blank or settings.telegram_link != blank or settings.linkedin_link != blank or settings.fb_messenger_link != blank or settings.discord_link != blank or settings.x_link != blank %}
                                <div class="{% if block.settings.show_bottom_line %}full-bottom-line{% endif %}" style="--spacing: {{ block.settings.top_spacing }}; --mobile-spacing: {{ block.settings.mobile_top_spacing }};" {{ block.shopify_attributes }}>
                                    {% if block.settings.subheading != blank %}
                                        <p class="block-heading {{ section.settings.block_headings_style }}{% if uppercase_heading %} uppercase{% endif %}{% if section.settings.block_headings_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                                            {% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ block.settings.subheading }}{% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                        </p>
                                    {% endif %}
                                    {% render 'social-icons' %}
                                    {%- if shop.features.follow_on_shop? -%}
                                        <div class="follow-on-shop">
                                            <div class="footer__follow-on-shop">
                                                {% # theme-check-disable %}
                                                {{ shop | login_button: action: 'follow' }}
                                                {% # theme-check-enable %}
                                            </div>
                                        </div>
                                    {%- endif -%}
                                </div>
                            {% endif %}
                        {% when 'context_image' %}
                            <div class="{% if block.settings.show_bottom_line %}full-bottom-line{% endif %}{% if section.settings.pinned_block == 'context_image' and forloop.index0 == last_pinned_block_index %} pinned-block modal--shadow{% endif %}" style="--spacing: {{ block.settings.top_spacing }}; --mobile-spacing: {{ block.settings.mobile_top_spacing }};" {{ block.shopify_attributes }}>
                                {%- render 'context-image', location: block, block_shopify_attributes: true, section_block: true -%}
                            </div>
                        {% when 'localization' %}
                            {% liquid 
                                assign enable_lang = false
                                    if block.settings.enable_language and localization.available_languages.size > 1
                                        assign enable_lang = true
                                    endif
                                assign enable_country = false
                                    if block.settings.enable_country and localization.available_countries.size > 1
                                        assign enable_lang = true
                                    endif
                            %}
                            {% if enable_lang or enable_country %}
                                <div class="{% if block.settings.show_bottom_line %}full-bottom-line{% endif %}{% if section.settings.pinned_block == 'localization' and forloop.index0 == last_pinned_block_index %} pinned-block modal--shadow{% endif %}" style="--spacing: {{ block.settings.top_spacing }}; --mobile-spacing: {{ block.settings.mobile_top_spacing }};" {{ block.shopify_attributes }}>
                                    {% render 'localization', object_type: block, show_localization_chevron: block.settings.show_localization_chevron, localization_radius: block.settings.localization_radius, show_outline: block.settings.show_localization_outline, show_flag: block.settings.show_localization_flag %}
                                </div>
                            {% endif %}
                        {% when 'store_selector' %}
                            <div class="{% if block.settings.show_bottom_line %}full-bottom-line{% endif %}{% if section.settings.pinned_block == 'store_selector' and forloop.index0 == last_pinned_block_index %} pinned-block modal--shadow{% endif %}" style="--spacing: {{ block.settings.top_spacing }}; --mobile-spacing: {{ block.settings.mobile_top_spacing }};" {{ block.shopify_attributes }}>
                                {% render 'store-selector', block: block %}
                            </div>
                        {% when 'custom_liquid' %}
                            {%- if block.settings.custom_liquid != blank -%}
                                <div style="--spacing: {{ block.settings.top_spacing }}; --mobile-spacing: {{ block.settings.mobile_top_spacing }};" class="custom-liquid body-font{% if settings.uppercase_body %} uppercase{% endif %} {% if block.settings.show_bottom_line %} full-bottom-line{% endif %}" {{ block.shopify_attributes }}>
                                    {{ block.settings.custom_liquid }}
                                </div>
                            {%- endif -%}
                        {% when 'account' %}
                            {%- if shop.customer_accounts_enabled -%}
                                <div class="{% if block.settings.show_bottom_line %}full-bottom-line{% endif %}{% if section.settings.pinned_block == 'account' and forloop.index0 == last_pinned_block_index %} pinned-block modal--shadow{% endif %}" style="--spacing: {{ block.settings.top_spacing }}; --mobile-spacing: {{ block.settings.mobile_top_spacing }};" {{ block.shopify_attributes }}>
                                    <a href="{{ routes.account_url }}" class="account flex--row" aria-label="{{ 'customer.account.go_to_account' | t }}">
                                        {% liquid 
                                            assign uppercase = false
                                            if block.settings.text_style == 'caption-font' and settings.uppercase_caption
                                                assign uppercase = true
                                            elsif block.settings.text_style == 'body-font' and settings.uppercase_body 
                                                assign uppercase = true
                                            elsif block.settings.text_style == 'subheading-font' and settings.uppercase_subheadings
                                                assign uppercase = true
                                            elsif block.settings.text_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                                assign uppercase = true
                                            elsif block.settings.text_style == 'section-heading' and settings.uppercase_section_headings
                                                assign uppercase = true
                                            endif
                                        %}
                                        <div class="account__title flex--row">
                                            {% if block.settings.show_icon %}{%- render 'glyphs_header', icon: 'user' -%}{% endif %}
                                            {% if customer %}<span class="{{ block.settings.text_style }} {% if uppercase %} uppercase{% endif%}{% if block.settings.text_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">{% if block.settings.text_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ 'customer.account.title' | t }}{% if block.settings.text_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}</span>{% else %}<span class="{{ block.settings.text_style }}{% if uppercase %} uppercase{% endif%}">{% if block.settings.text_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ 'customer.account.create_account' | t }}{% if block.settings.text_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}</span>{% endif %}
                                        </div>
                                        <div><span class="icon icon--small">{%- render 'glyphs_arrows', icon: 'chevron-right' -%}</span></div>
                                    </a>
                                </div>
                            {%- endif -%}
                        {%- when 'empty_space' -%}
                            {%- render 'empty-space', block: block -%}
                        {% when 'buttons' %}
                            {% if block.settings.button_label_1 != blank or block.settings.button_icon_1 != blank or block.settings.button_label_2 != blank or block.settings.button_icon_2 != blank or block.settings.button_label_3 != blank or block.settings.button_icon_3 != blank %}
                                <div class="buttons{% if block.settings.show_bottom_line %} full-bottom-line{% endif %} flex--row{% if section.settings.pinned_block == 'buttons' and forloop.index0 == last_pinned_block_index %} pinned-block modal--shadow{% endif %}" style="--spacing: {{ block.settings.top_spacing }}; --mobile-spacing: {{ block.settings.mobile_top_spacing }};" {{ block.shopify_attributes }}>
                                    {%- if block.settings.button_label_1 != blank or block.settings.button_icon_1 != blank -%}
                                        <div class="button-block {% if block.settings.button_label_1 != blank and block.settings.button_icon_1 != blank %}button-block--small-padding{% endif %} block__button{% if block.settings.button_style_2 == 'link' %} block__button--link{% endif %}{% if block.settings.use_main_button %} button-block--main{% endif %}">
                                            {%- if block.settings.button_link_1 != blank  -%}
                                                <a href="{{ block.settings.button_link_1 }}"{% if block.settings.target_blank_1 %} target="_blank"{% endif %} class="button {% if block.settings.button_icon_1 != blank or block.settings.button_icon_2 != blank or block.settings.button_icon_3 != blank %}button-with-icon{% endif %} {{ block.settings.button_style_1 }}-button body-font{% if block.settings.use_main_button %} button--main{% if settings.use_heading_font_main_buttons %} heading-font-style{% endif %}{% if settings.uppercase_main_buttons %} uppercase{% endif %}{% else %} button--secondary{% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}{% endif %}{% if block.settings.swap_button_icon_1 %} icon--swap{% endif %}">
                                            {%- else -%}
                                                <span disabled class="button {% if block.settings.button_icon_1 != blank or block.settings.button_icon_2 != blank or block.settings.button_icon_3 != blank %}button-with-icon{% endif %} {{ block.settings.button_style_1 }}-button body-font{% if block.settings.use_main_button %} button--main{% if settings.use_heading_font_main_buttons %} heading-font-style{% endif %}{% if settings.uppercase_main_buttons %} uppercase{% endif %}{% else %} button--secondary{% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}{% endif %}{% if block.settings.swap_button_icon_1 %} icon--swap{% endif %}">
                                            {%- endif -%}
                                            {% if block.settings.button_icon_1 != blank %}
                                                {%- liquid
                                                assign icon_name = block.settings.button_icon_1 | split: '/'
                                                if icon_name.size == 3
                                                    assign file_name = icon_name.first | append: '_' | append: icon_name[1]
                                                elsif icon_name.size == 2
                                                    assign file_name = icon_name.first
                                                endif
                                                assign icon = icon_name.last
                                                -%}
                                            <span class="icon-accordion flex--row {% if block.settings.use_main_button %}icon--large{% else %}icon--small{% endif %}">{% render 'catalog-icons', file_name: file_name, icon: icon %}</span>
                                            {% endif %}
                                                {% if block.settings.use_main_button %}
                                                    {% if settings.bolder_main_buttons_font %}<b>{% endif %}{{ block.settings.button_label_1 }}{% if settings.bolder_main_buttons_font %}</b>{% endif %}
                                                {% else %}
                                                    {% if settings.bolder_secondary_buttons_font %}<b>{% endif %}{{ block.settings.button_label_1 }}{% if settings.bolder_secondary_buttons_font %}</b>{% endif %}
                                                {% endif %}
                                            {%- if block.settings.button_link_1 != blank -%}</a>{%- else -%}</span>{%- endif -%}
                                        </div>
                                        <br class="button-wrap">
                                    {%- endif -%}
                                    {%- if block.settings.button_label_2 != blank or block.settings.button_icon_2 != blank -%}
                                        <div class="button-block {% if block.settings.button_label_2 != blank and block.settings.button_icon_2 != blank %}button-block--small-padding{% endif %} block__button{% if block.settings.button_style_2 == 'link' %} block__button--link{% endif %}{% if block.settings.use_main_button %} button-block--main{% endif %}">
                                            {%- if block.settings.button_link_2 != blank -%}
                                                <a href="{{ block.settings.button_link_2 }}"{% if block.settings.target_blank_2 %} target="_blank"{% endif %} class="button {% if block.settings.button_icon_1 != blank or block.settings.button_icon_2 != blank or block.settings.button_icon_3 != blank %}button-with-icon{% endif %} {{ block.settings.button_style_2 }}-button body-font{% if block.settings.use_main_button %} button--main{% if settings.use_heading_font_main_buttons %} heading-font-style{% endif %}{% if settings.uppercase_main_buttons %} uppercase{% endif %}{% else %} button--secondary{% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}{% endif %}{% if block.settings.swap_button_icon_2 %} icon--swap{% endif %}">
                                            {%- else -%}
                                                <span disabled class="button {% if block.settings.button_icon_1 != blank or block.settings.button_icon_2 != blank or block.settings.button_icon_3 != blank %}button-with-icon{% endif %} {{ block.settings.button_style_2 }}-button body-font{% if block.settings.use_main_button %} button--main{% if settings.use_heading_font_main_buttons %} heading-font-style{% endif %}{% if settings.uppercase_main_buttons %} uppercase{% endif %}{% else %} button--secondary{% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}{% endif %}{% if block.settings.swap_button_icon_2 %} icon--swap{% endif %}">
                                            {%- endif -%}
                                            {% if block.settings.button_icon_2 != blank %}
                                                {%- liquid
                                                assign icon_name = block.settings.button_icon_2 | split: '/'
                                                if icon_name.size == 3
                                                    assign file_name = icon_name.first | append: '_' | append: icon_name[1]
                                                elsif icon_name.size == 2
                                                    assign file_name = icon_name.first
                                                endif
                                                assign icon = icon_name.last
                                                -%}
                                            <span class="icon-accordion flex--row {% if block.settings.use_main_button %}icon--large{% else %}icon--small{% endif %}">{% render 'catalog-icons', file_name: file_name, icon: icon %}</span>
                                            {% endif %}
                                                {% if block.settings.use_main_button %}
                                                    {% if settings.bolder_main_buttons_font %}<b>{% endif %}{{ block.settings.button_label_2 }}{% if settings.bolder_main_buttons_font %}</b>{% endif %}
                                                {% else %}
                                                    {% if settings.bolder_secondary_buttons_font %}<b>{% endif %}{{ block.settings.button_label_2 }}{% if settings.bolder_secondary_buttons_font %}</b>{% endif %}
                                                {% endif %}
                                            {%- if block.settings.button_link_2 != blank -%}</a>{%- else -%}</span>{%- endif -%}
                                        </div>
                                        <br class="button-wrap">
                                    {%- endif -%}
                                    {%- if block.settings.button_label_3 != blank or block.settings.button_icon_3 != blank -%}
                                        <div class="button-block {% if block.settings.button_label_3 != blank and block.settings.button_icon_3 != blank %}button-block--small-padding{% endif %} block__button{% if block.settings.button_style_3 == 'link' %} block__button--link{% endif %}{% if block.settings.use_main_button %} button-block--main{% endif %}">
                                            {%- if block.settings.button_link_3 != blank -%}
