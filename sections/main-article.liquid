                                {% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{% if article.comments_count == 1 %}{{ 'blogs.article.comments.one' | t: count: article.comments_count }}{% else %}{{ 'blogs.article.comments.other' | t: count: article.comments_count }}{% endif %}{% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                              </h2>
                              {% paginate article.comments by 3 %}
                                <div class="article__comments body-font {% if settings.uppercase_body %}uppercase{% endif %}">
                                  {%- if comment.status == 'pending' and comment.content -%}
                                    <article id="{{ comment.id }}" class="article__comments-comment">
                                      <span class="comments__author">{{ comment.author }}</span>
                                      <div class="comments__content">{{ comment.content }}</div>                    
                                    </article>
                                  {%- endif -%}
                  
                                  {%- for comment in article.comments -%}
                                    <article id="{{ comment.id }}" class="article__comments-comment">
                                      <p class="comments__author">{{ comment.author }} <span class="caption-with-letter-spacing">{{ comment.created_at | time_tag: format: 'date' }}</span></p>
                                      <div class="comments__content">{{ comment.content }}</div>                   
                                    </article>
                                  {%- endfor -%}
                                  {% render 'pagination', paginate: paginate, anchor: anchor_id, disable_max_width: disable_max_width, pagination_type: section.settings.pagination %}
                                </div>
                              {% endpaginate %}
                            {%- endif -%}
                            {% form 'new_comment', article %}
                              {%- liquid
                                assign post_message = 'blogs.article.success'
                                if blog.moderated? and comment.status == 'unapproved'
                                  assign post_message = 'blogs.article.success_moderated'
                                endif
                              -%}
                              <h2 class="comments__title {{ block.settings.heading_style }}{% if uppercase_heading %} uppercase{% endif %}">{{ 'blogs.article.comment_form_title' | t }}</h2>
