                                                      {%- if block.settings.show_date -%}
                                                          <span class="article__info-date">
                                                          {{- next_post.published_at | date: format: 'abbreviated_date' -}}
                                                          </span>
                                                      {%- endif -%}
                                                      {%- if block.settings.show_author -%}
                                                          <span class="article__info-author">{{ next_post.author }}</span>
                                                      {%- endif -%}
                                                      {%- if block.settings.show_number_of_comments and next_post.comments_count > 0 and blog.comments_enabled? -%}
