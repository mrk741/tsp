{{ 'main-article.css' | asset_url | stylesheet_tag }}
{{ 'section-image-grid.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-modal.js' | asset_url }}" defer="defer"></script>
<script id="EnableZoomOnHover-main" src="{{ 'magnify.js' | asset_url }}" defer="defer"></script>

{%- liquid
    assign disable_max_width = false
    if section.settings.disable_max_width 
      assign disable_max_width = true
    elsif section.settings.grid_style == 'page' and settings.full_width_page_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'alternative' and settings.full_width_alt_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'secondary' and settings.full_width_second_grid
      assign disable_max_width = true
    endif

    assign max_width = '100vw'
    if disable_max_width == false and section.settings.grid_style == 'page'
        assign max_width = settings.page_width | append: 'px'
    elsif disable_max_width == false and section.settings.grid_style == 'alternative'
        assign max_width = settings.alt_grid_width | append: 'px'
    elsif disable_max_width == false and section.settings.grid_style == 'secondary'
        assign max_width = settings.second_grid_width | append: 'px'
    endif

    assign article_url_split_1 = article.url | split: '/blogs/'
    assign article_url_split_2 = article_url_split_1[1] | split: '/'
    assign blog_handle = article_url_split_2[0] | strip
    assign article_blog = blogs[blog_handle]

    assign onload_script = ''
    assign loading_images = ''
    if settings.images_loading != 'disable'
        assign onload_script = 'this.parentNode.classList.add("lazyloaded");' 
        assign loading_images = 'lazy'
    elsif section.index > 2
      assign loading_images = 'lazy'
    endif
-%}

{% style %}
    #shopify-section-{{ section.id }} {
        --top-spacing: {{ section.settings.top_spacing }};
        --bottom-spacing: {{ section.settings.bottom_spacing }};
    }
{% endstyle %}

<div class="section color-{{ section.settings.color_scheme }}"   
    data-article-blog-title="{{ article_blog.title }}"
    data-article-blog-url="{{ article_blog.url }}"
>
    <article class="article section-container{% if section.settings.show_bottom_line %} bottom-line{% endif %}" itemscope itemtype="http://schema.org/BlogPosting">
        {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when 'breadcrumbs' -%}
                  <div class="side-margins {{ section.settings.grid_style }}-grid {% if disable_max_width %}disable-max-width{% endif %}">
                    {%- render 'breadcrumbs', object: block -%}
                  </div>
                {%- when 'title'-%}
                  <div class="side-margins {{ section.settings.grid_style }}-grid {% if disable_max_width %}disable-max-width{% endif %}">
                    <div class="article__block-title {{ section.settings.content_width }}{% if block.settings.center_text %} center{% endif %}" {{ block.shopify_attributes }}>
                      {%- liquid
                        assign uppercase_heading = false
                        if block.settings.heading_style == 'caption-font' and settings.uppercase_caption
                            assign uppercase_heading = true
                        elsif block.settings.heading_style == 'body-font' and settings.uppercase_body
                            assign uppercase_heading = true
                        elsif block.settings.heading_style == 'subheading-font' and settings.uppercase_subheadings
                            assign uppercase_heading = true
                        elsif block.settings.heading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                            assign uppercase_heading = true
                        elsif block.settings.heading_style == 'section-heading' and settings.uppercase_section_headings
                            assign uppercase_heading = true
                        elsif block.settings.heading_style == 'page-title' and settings.uppercase_page_titles
                            assign uppercase_heading = true
                        endif
                      -%}
                        <h1 class="article__title {{ block.settings.heading_style }}{% if uppercase_heading %} uppercase{% endif %}{% if block.settings.heading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}" itemprop="headline">
                          {% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ article.title | escape }}{% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                        </h1>
                        {%- if block.settings.show_date or block.settings.show_author or block.settings.show_number_of_comments and article.comments_count > 0 and blog.comments_enabled? -%}
                          {%- liquid
                            assign uppercase_subheading = false
                            if block.settings.subheading_style == 'section-heading' and settings.uppercase_section_headings
                              assign uppercase_subheading = true
                            elsif block.settings.subheading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                              assign uppercase_subheading = true
                            elsif block.settings.subheading_style == 'subheading-font' and settings.uppercase_subheadings
                                assign uppercase_subheading = true
                            elsif block.settings.subheading_style == 'body-font' and settings.uppercase_body
                                assign uppercase_subheading = true
                            elsif block.settings.subheading_style == 'caption-font' and settings.uppercase_caption
                                assign uppercase_subheading = true
                            endif
                          -%}
                            <div class="article__info flex--row {{ block.settings.subheading_style }}{% if uppercase_subheading %} uppercase{% endif %}{% if block.settings.subheading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                                {%- if block.settings.show_date -%}
                                    <span class="article__info-date">
                                      {% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}
                                    {{- article.published_at | date: format: 'abbreviated_date' -}}
                                    {% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                    </span>
                                {%- endif -%}
                                {%- if block.settings.show_author -%}
                                    <span class="article__info-author">{% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}
                                      {{ article.author }}
                                      {% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}</span>
                                {%- endif -%}
                                {%- if block.settings.show_number_of_comments and article.comments_count > 0 and blog.comments_enabled? -%}
                                    <span class="article__info-comments-count">{% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}
                                    {% if article.comments_count == 1 %}{{ 'blogs.article.comments.one' | t: count: article.comments_count }}{% else %}{{ 'blogs.article.comments.other' | t: count: article.comments_count }}{% endif %}
                                    {% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}</span>
                                {%- endif -%}
                            </div>
                        {%- endif -%}
                    </div>
                  </div>
                {%- when 'featured_image'-%}
                    {%- if article.image -%}
                      <div class="side-margins {{ section.settings.grid_style }}-grid {% if disable_max_width %}disable-max-width{% endif %}">
                        <div class="article__block-image {{ block.settings.content_width }}" {{ block.shopify_attributes }}>
                            {% style %}
                                #shopify-section-{{ section.id }} .article__block-image {
                                    --aspect-ratio: {{ block.settings.media_ratio }};
                                    --focal-point: {{ block.settings.focal_point }};
                                }
                                {% if settings.images_loading != 'disable' and block.settings.media_ratio == 'auto' %}
                                  #shopify-section-{{ section.id }} .article__block-image .lazy-image {
                                    aspect-ratio: var(--asp-rat);
                                  }
                                {% endif %}
                            {% endstyle %}
                            <div class="article__block-image-wrapper aspect-ratio"
                                itemprop="image" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                                {%- liquid
                                  assign widths = '300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200'
                                  if block.settings.full_width
                                    assign max_width = '100vw'
                                  endif
                                -%}
                                {%- capture sizes -%}
                                    (max-width: 768px) 100vw, {{ max_width }}
                                    {% if block.settings.content_width == 'narrow' %}
                                      (max-width: 768px) 100vw, (min-width: 480px) 500px, {{ max_width }}
                                    {% endif %}
                                    {% if block.settings.content_width == 'regular' %}
                                      (max-width: 768px) 100vw, (min-width: 720px) 750px, {{ max_width }}
                                    {% endif %}
                                {%- endcapture -%}
                                {% if settings.images_loading != 'disable' %}
                                  <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--asp-rat: {{ article.image.aspect_ratio }}">
                                {% endif %}
                                {{
                                  article.image
                                  | image_url: width: 3200
                                  | image_tag:
                                  sizes: sizes,
                                  widths: widths,
                                  alt: article.image.alt,
                                  draggable: false,
                                  loading: loading_images,
                                  onload: onload_script
                                }}
                                {% if settings.images_loading != 'disable' %}
                                  {% if settings.images_loading != 'fade_scale' %}
                                  <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                                    <img 
                                    alt="{{ article.image.alt | escape }}" 
                                    src="{{ article.image | image_url: width: 10 }}"
                                    draggable="false"
                                    width="10" 
                                    height="10">
                                  </div>
                                  {% endif %}
                              </figure>
                              {% endif %}
                            </div>
                        </div>
                      </div>
                    {%- endif -%}
                {%- when 'content'-%}
                    <div class="side-margins {{ section.settings.grid_style }}-grid {% if disable_max_width %}disable-max-width{% endif %}" itemprop="articleBody" {{ block.shopify_attributes }}>
                        <div class="article__content body-font {% if settings.uppercase_body %}uppercase{% endif %} rte {% if settings.uppercase_section_headings %}headings-uppercase{% endif %} {{ section.settings.content_width }}">  
                            {{ article.content }}
                        </div>
                    </div>
                {%- when 'tags'-%}
                    {% if article.tags.size > 0 %}
                      <div class="side-margins {{ section.settings.grid_style }}-grid {% if disable_max_width %}disable-max-width{% endif %}">
                        <div class="article__block-tags {{ section.settings.content_width }}" {{ block.shopify_attributes }}>
                            <p class="article__tags">
                              {% liquid 
                                assign uppercase_text = false
                                if block.settings.text_style == 'section-heading' and settings.uppercase_section_headings
                                    assign uppercase_text = true
                                elsif block.settings.text_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                    assign uppercase_text = true
                                elsif block.settings.text_style == 'subheading-font' and settings.uppercase_subheadings
                                    assign uppercase_text = true
                                elsif block.settings.text_style == 'body-font' and settings.uppercase_body
                                    assign uppercase_text = true
                                elsif block.settings.text_style == 'caption-font' and settings.uppercase_caption
                                    assign uppercase_text = true
                                endif
                              %}
                                <span class="article__tags-title {{ block.settings.text_style }}
                                  {% if block.settings.text_style == 'subheading-font' %}{% if settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}{% if settings.uppercase_subheadings %} uppercase{% endif %}
                                  {% else %}{% if uppercase_text %} uppercase{% endif %}{% endif %}">
                                  {% if block.settings.text_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}
                                  {{ "blogs.article.tags" | t }}:
                                  {% if block.settings.text_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                </span>
                                {% for tag in article.tags %}
                                    <a href="{{ routes.root_url }}blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}" class="article__tag link-underline body-font">
                                      {{ tag }}
                                    </a>
                                {% endfor %}
                            </p>
                        </div>
                      </div>
                    {% endif %}
                {%- when 'share' -%}
                  {% liquid
                    assign share_image = article.image | default: article.image
                    render 'share', block: block, share_title: article.title, share_link: article.url, share_image: share_image, disable_max_width: disable_max_width, content_width: section.settings.content_width
                  %}
                {%- when 'prev_and_next'-%}
                    <div class="side-margins {{ section.settings.grid_style }}-grid {% if disable_max_width %}disable-max-width{% endif %}" {{ block.shopify_attributes }}>
                        <ul class="article__pagination body-font {% if settings.uppercase_body %}uppercase{% endif %} {{ section.settings.content_width }}">
                            <li class="article__pagination-prev">
                                <a class="article__pagination-link button icon-button link-button body-font {% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}" href="{{ blog.previous_article.url }}" {% unless blog.previous_article %}disabled{% endunless %}>
                                  <span class="article__pagination-icon">
                                    {%- render 'glyphs_arrows', icon: 'arrow-left' -%}
                                  </span>
                                  <span class="article__pagination-button icon-button__title">
                                    {% if settings.bolder_secondary_buttons_font %}<b>{% endif %}{{ "blogs.article.previous_post" | t }}{% if settings.bolder_secondary_buttons_font %}</b>{% endif %}
                                  </span>
                                </a>
                            </li>
                            <li class="article__pagination-next">
                                <a class="article__pagination-link button icon-button link-button body-font {% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}" href="{{ blog.next_article.url }}" {% unless blog.next_article %}disabled{% endunless %}>
                                  <span class="article__pagination-button icon-button__title">
                                    {% if settings.bolder_secondary_buttons_font %}<b>{% endif %}{{ "blogs.article.next_post" | t }}{% if settings.bolder_secondary_buttons_font %}</b>{% endif %}
                                  </span>
                                  <span class="article__pagination-icon">
                                    {%- render 'glyphs_arrows', icon: 'arrow-right' -%}
                                  </span>
                                </a>
                            </li>
                            <li class="article__pagination-back{% if block.settings.button_icon != blank %} button-block--small-padding{% endif %}">
                              <a href="{{ blog.url }}" class="article-template__link button outlined-button  button--secondary{% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}{% if block.settings.button_label != blank and block.settings.button_icon != blank %} button-block--small-padding{% endif %}{% if block.settings.button_icon != blank %} button-with-icon{% if block.settings.swap_button_icon %} icon--swap{% endif %}{% endif %}">
                                {% if block.settings.button_icon != blank %}
                                  {%- liquid
                                    assign icon_name = block.settings.button_icon | split: '/'
                                    if icon_name.size == 3
                                        assign file_name = icon_name.first | append: '_' | append: icon_name[1]
                                    elsif icon_name.size == 2
                                        assign file_name = icon_name.first
                                    endif
                                    assign icon = icon_name.last
                                  -%}
                                  <span class="icon-accordion flex--row icon--small">{% render 'catalog-icons', file_name: file_name, icon: icon %}</span>
                                {% endif %}
                                {% if settings.bolder_secondary_buttons_font %}<b>{% endif %}{% if block.settings.button_label != blank %}{{ block.settings.button_label }}{% else %}{{ 'blogs.article.back_to_blog' | t: title: blog.title }}{% endif %}{% if settings.bolder_secondary_buttons_font %}</b>{% endif %}
                              </a>
                            </li>
                          </ul>
                    </div>
                {%- when 'post_navigation'-%}
                  <div class="side-margins {{ section.settings.grid_style }}-grid {% if disable_max_width %}disable-max-width{% endif %}" {{ block.shopify_attributes }}>
                    <div class="article__block-navigation {{ section.settings.content_width }}">
                        {% style %}
                            #shopify-section-{{ section.id }} .article__block-navigation {
                                --grid-columns: 2;
                                --aspect-ratio: {{ block.settings.media_ratio }};
                                --line-clamp: {{ block.settings.excerpt_line_limit }};
                                --focal-point: {{ block.settings.focal_point }};
                            }
                            {% if settings.images_loading != 'disable' and block.settings.media_ratio == 'auto' %}
                              #shopify-section-{{ section.id }} .article__block-navigation .lazy-image {
                                aspect-ratio: var(--asp-rat);
                              }
                            {% endif %}
                            @media screen and (max-width: 768px) {
                              #shopify-section-{{ section.id }} .article__block-navigation {
                                  --grid-columns: 1;
                              }
                            }
                        {% endstyle %}
                        {% if block.settings.heading != blank %}
                          {%- liquid
                            assign uppercase_heading = false
                            if block.settings.heading_style == 'caption-font' and settings.uppercase_caption
                                assign uppercase_heading = true
                            elsif block.settings.heading_style == 'body-font' and settings.uppercase_body
                                assign uppercase_heading = true
                            elsif block.settings.heading_style == 'subheading-font' and settings.uppercase_subheadings
                                assign uppercase_heading = true
                            elsif block.settings.heading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                assign uppercase_heading = true
                            elsif block.settings.heading_style == 'section-heading' and settings.uppercase_section_headings
                                assign uppercase_heading = true
                            elsif block.settings.heading_style == 'page-title' and settings.uppercase_page_titles
                                assign uppercase_heading = true
                            endif
                          -%}
                          <p class="{{ block.settings.heading_style }}{% if uppercase_heading %} uppercase{% endif %}{% if block.settings.heading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                            {% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ block.settings.heading }}{% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                          </p>
                        {% endif %}
                        <div class="article__navigation grid {{ section.settings.grid_style }}-grid-gaps">
                            {%- liquid
                                assign previous_post = blog.previous_article
                                if block.settings.prev_post != blank
                                    assign previous_post = block.settings.prev_post
                                endif

                                assign next_post = blog.next_article
                                if block.settings.next_post != blank
                                    assign next_post = block.settings.next_post
                                endif
                            -%}
                            {% if previous_post %}
                                <div class="article__navigation-item {% if block.settings.show_post_border %} with-border{% endif %} color-{{ block.settings.post_color_scheme }}{% if block.settings.post_color_scheme != section.settings.color_scheme %} with-color{% endif %}">
                                    {% if block.settings.show_featured_image and previous_post.image %}
                                        <a href="{{ previous_post.url }}" class="article__navigation-image aspect-ratio" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                                          {%- liquid
                                            assign widths = '200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000'
                                          -%}
                                          {%- capture sizes -%}
                                              (max-width: 768px) calc(100vw / 2), (max-width: {{ max_width }}) {{ max_width | divided_by: 2 }}px, {{ max_width | divided_by: 2 }}px
                                          {%- endcapture -%}
                                          {% if settings.images_loading != 'disable' %}
                                            <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--asp-rat: {{ previous_post.image.aspect_ratio }}">
                                          {% endif %}
                                          {{
                                            previous_post.image
                                            | image_url: width: 3200
                                            | image_tag:
                                            sizes: sizes,
                                            widths: widths,
                                            alt: previous_post.image.alt,
                                            draggable: false,
                                            loading: loading_images,
                                            onload: onload_script
                                          }}
                                          {% if settings.images_loading != 'disable' %}
                                            {% if settings.images_loading != 'fade_scale' %}
                                            <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                                              <img 
                                              alt="{{ previous_post.image.alt | escape }}" 
                                              src="{{ previous_post.image | image_url: width: 10 }}"
                                              draggable="false"
                                              width="10" 
                                              height="10">
                                            </div>
                                            {% endif %}
                                        </figure>
                                        {% endif %}
                                        </a>
                                    {% endif %}
                                    {% if block.settings.show_date or block.settings.show_author or block.settings.show_number_of_comments and previous_post.comments_count > 0 and blog.comments_enabled? or block.settings.show_post_title or block.settings.show_excerpt %}
                                    <div class="article__navigation-info">
                                      {%- if block.settings.show_date or block.settings.show_author or block.settings.show_number_of_comments and previous_post.comments_count > 0 and blog.comments_enabled? or block.settings.show_post_title -%}
                                          <div class="article__navigation-description">
                                              {% if block.settings.show_post_title %}<a href="{{ previous_post.url }}" class="article__navigation-title secondary-heading {% if settings.uppercase_secondary_headings %}uppercase{% endif %}">{{ previous_post.title | escape }}</a>{% endif %}
                                              {%- if block.settings.show_date or block.settings.show_author or block.settings.show_number_of_comments and previous_post.comments_count > 0 and blog.comments_enabled? -%}
                                                  <div class="article__info flex--row body-font {% if settings.uppercase_body %}uppercase{% endif %}">
                                                      {%- if block.settings.show_date -%}
                                                          <span class="article__info-date">
                                                          {{- previous_post.published_at | date: format: 'abbreviated_date' -}}
                                                          </span>
                                                      {%- endif -%}
                                                      {%- if block.settings.show_author -%}
                                                          <span class="article__info-author">{{ previous_post.author }}</span>
                                                      {%- endif -%}
                                                      {%- if block.settings.show_number_of_comments and previous_post.comments_count > 0 and blog.comments_enabled? -%}
                                                          <span class="article__info-comments-count">{% if previous_post.comments_count == 1 %}{{ 'blogs.article.comments.one' | t: count: previous_post.comments_count }}{% else %}{{ 'blogs.article.comments.other' | t: count: previous_post.comments_count }}{% endif %}</span>
                                                      {%- endif -%}
                                                  </div>
                                              {%- endif -%}
                                          </div>
                                      {%- endif -%}
                                      {%- if block.settings.show_excerpt -%}
                                          <div class="article__navigation-excerpt {% if previous_post.excerpt == blank %}line-clamp{% endif %} body-font {% if settings.uppercase_body %}uppercase{% endif %}">
                                              {{ previous_post.excerpt_or_content }}
                                          </div>
                                      {%- endif -%}
                                    </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                            {% if next_post %}
                                <div class="article__navigation-item {% if block.settings.show_post_border %} with-border{% endif %} color-{{ block.settings.post_color_scheme }}{% if block.settings.post_color_scheme != section.settings.color_scheme %} with-color{% endif %}">
                                    {% if block.settings.show_featured_image and next_post.image %}
                                        <a href="{{ next_post.url }}" class="article__navigation-image aspect-ratio" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                                          {%- liquid
                                            assign widths = '200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000'
                                          -%}
                                          {%- capture sizes -%}
                                              (max-width: 768px) calc(100vw / 2), (max-width: {{ max_width }}) {{ max_width | divided_by: 2 }}px, {{ max_width | divided_by: 2 }}px
                                          {%- endcapture -%}
                                          {% if settings.images_loading != 'disable' %}
                                            <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--asp-rat: {{ next_post.image.aspect_ratio }}">
                                          {% endif %}
                                          {{
                                            next_post.image
                                            | image_url: width: 3200
                                            | image_tag:
                                            sizes: sizes,
                                            widths: widths,
                                            alt: next_post.image.alt,
                                            draggable: false,
                                            loading: loading_images,
                                            onload: onload_script
                                          }} 
                                          {% if settings.images_loading != 'disable' %}
                                            {% if settings.images_loading != 'fade_scale' %}
                                            <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                                              <img 
                                              alt="{{ next_post.image.alt | escape }}" 
                                              src="{{ next_post.image | image_url: width: 10 }}"
                                              draggable="false"
                                              width="10" 
                                              height="10">
                                            </div>
                                            {% endif %}
                                        </figure>
                                        {% endif %} 
                                        </a>
                                    {% endif %}
                                    {% if block.settings.show_date or block.settings.show_author or block.settings.show_number_of_comments and previous_post.comments_count > 0 and blog.comments_enabled? or block.settings.show_post_title or block.settings.show_excerpt %}
                                    <div class="article__navigation-info">
                                      {%- if block.settings.show_date or block.settings.show_author or block.settings.show_number_of_comments and next_post.comments_count > 0 and blog.comments_enabled? or block.settings.show_post_title -%}
                                          <div class="article__navigation-description">
                                              {% if block.settings.show_post_title %}<a href="{{ next_post.url }}" class="article__navigation-title secondary-heading {% if settings.uppercase_secondary_headings %}uppercase{% endif %}">{{ next_post.title | escape }}</a>{% endif %}
                                              {%- if block.settings.show_date or block.settings.show_author or block.settings.show_number_of_comments and next_post.comments_count > 0 and blog.comments_enabled? -%}
