{{ 'section-collection-banner-vertical.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign disable_max_width = false
  if section.settings.disable_max_width 
      assign disable_max_width = true
  elsif section.settings.grid_style == 'page' and settings.full_width_page_grid
      assign disable_max_width = true
  elsif section.settings.grid_style == 'alternative' and settings.full_width_alt_grid
      assign disable_max_width = true
  elsif section.settings.grid_style == 'secondary' and settings.full_width_second_grid
      assign disable_max_width = true
  endif

  assign section_framing = false
  if section.settings.section_framing != 'disable'
      assign section_framing = true
  endif

  assign lazy_loading_images = false
  assign onload_script = ''
  assign loading_images = ''
  if section.index > 2 and settings.images_loading != 'disable'
    assign lazy_loading_images = true
    assign onload_script = 'this.parentNode.classList.add("lazyloaded");'
    assign loading_images = 'lazy'
  endif
-%}

{% style %}
    #shopify-section-{{ section.id }} {
        --top-spacing: {{ section.settings.top_spacing }};
        --bottom-spacing: {{ section.settings.bottom_spacing }};
        --focal-point: {{ section.settings.collection_focal_point }};
        --aspect-ratio: {{ section.settings.collection_media_ratio }};
        --image-width: {{ section.settings.image_width }}px;
    }
    {% if lazy_loading_images and section.settings.collection_media_ratio == 'auto' %}
        #shopify-section-{{ section.id }} .collection__image .lazy-image {
          aspect-ratio: var(--asp-rat);
        }
    {% endif %}
{% endstyle %}

<div class="section section-container{% unless section_framing %} color-{{ section.settings.color_scheme }}{% endunless %} side-margins{% if section.settings.show_bottom_line %} bottom-line{% endif %}">
  {% if section_framing %}<div class="section-radius elem-padding-l color-{{ section.settings.color_scheme }}">{% endif %}
    <div class="collection-banner-vertical flex--column {{ section.settings.grid_style }}-grid {% if disable_max_width %}disable-max-width{% endif %}{% if section.settings.center_text %} center{% endif %}">
        {%- if section.settings.show_collection_image -%}
            <div class="collection__image section-radius aspect-ratio {% if section.settings.collection_image_under_heading %}under-heading{% endif %}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
              {%- liquid
                assign widths = '300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200'
                assign fetchpriority = 'high'
                if section.index > 1 
                  assign fetchpriority = 'auto'
                endif
              -%}
              {%- capture sizes -%}
                (max-width: 768px) 100vw, {{ section.settings.image_width }}px
              {%- endcapture -%}
              {%- if collection.featured_image -%}
                {% if lazy_loading_images %}
                  <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--asp-rat: {{ collection.featured_image.aspect_ratio }};">
                  {% endif %}
                {{
                  collection.featured_image
                  | image_url: width: 1600
                  | image_tag:
                  sizes: sizes,
                  widths: widths,
                  alt: collection.featured_image.alt,
                  draggable: false,
                  fetchpriority: fetchpriority,
                  loading: loading_images,
                  onload: onload_script
                }}
                {% if lazy_loading_images %}
                  {% if settings.images_loading != 'fade_scale' %}
                  <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                    <img 
                    alt="{{ collection.featured_image.alt | escape }}" 
                    src="{{ collection.featured_image | image_url: width: 10 }}"
                    draggable="false"
                    width="10" 
                    height="10">
                  </div>
                  {% endif %}
              </figure>
              {% endif %}
              {%- endif -%}
            </div>
        {%- endif -%}
        {%- liquid 
          assign show_content = false
          if section.settings.show_collection_title
            assign show_content = true
          endif
          if section.settings.show_product_quantity
            assign show_content = true
          endif
          if section.settings.show_collection_description and collection.description != blank
            assign show_content = true
          endif
          if section.blocks.size > 0
            assign show_content = true
          endif
        -%}
        {%- if show_content -%}
        <div class="collection__content flex--column content-width--{{ section.settings.content_width }}">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'breadcrumbs' -%}
                {%- render 'breadcrumbs', object: section -%}
            {%- endcase -%}
          {%- endfor -%}

          {%- liquid
            assign uppercase_heading = false
            if section.settings.heading_style == 'caption-font' and settings.uppercase_caption
                assign uppercase_heading = true
            elsif section.settings.heading_style == 'body-font' and settings.uppercase_body
                assign uppercase_heading = true
            elsif section.settings.heading_style == 'subheading-font' and settings.uppercase_subheadings
                assign uppercase_heading = true
            elsif section.settings.heading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                assign uppercase_heading = true
            elsif section.settings.heading_style == 'section-heading' and settings.uppercase_section_headings
                assign uppercase_heading = true
            elsif section.settings.heading_style == 'page-title' and settings.uppercase_page_titles
                assign uppercase_heading = true
            endif

            assign uppercase_text = false
            if section.settings.text_style == 'section-heading' and settings.uppercase_section_headings
              assign uppercase_text = true
            elsif section.settings.text_style == 'secondary-heading' and settings.uppercase_secondary_headings
              assign uppercase_text = true
            elsif section.settings.text_style == 'subheading-font' and settings.uppercase_subheadings
                assign uppercase_text = true
            elsif section.settings.text_style == 'body-font' and settings.uppercase_body
                assign uppercase_text = true
            elsif section.settings.text_style == 'caption-font' and settings.uppercase_caption
                assign uppercase_text = true
            endif
          -%}
            {%- if section.settings.show_collection_title -%}
            <h1 class="collection__heading section-block {{ section.settings.heading_style }}{% if uppercase_heading %} uppercase{% endif %}{% if section.settings.heading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
              {% if section.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ collection.title | escape }}{% if section.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
            </h1>
            {%- endif -%}
            {%- if section.settings.show_product_quantity -%}
              <p class="collection__products {{ section.settings.text_style }}{% if uppercase_text %} uppercase{% endif %} {% if section.settings.text_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
              {% if section.settings.text_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}
                {% if collection.all_products_count == 1 %}{{ 'collection.product.one' | t: count: collection.all_products_count }}{% else %}{{ 'collection.product.other' | t: count: collection.all_products_count }}{% endif %}
              {% if section.settings.text_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}</p> 
            {%- endif -%}
            {%- if section.settings.show_collection_description and collection.description != blank -%}
                <div class="collection__description section-block richtext rte link-underline {{ section.settings.text_style }}{% if uppercase_text %} uppercase{% endif %} 
                  {% if section.settings.text_style == 'subheading-font' %}{% if settings.use_heading_font_subheadings %} subheading-heading-font{% endif %} {% if settings.bolder_subheadings_font %} bold{% endif %}{% endif %}">
                  {{ collection.description }}
                </div>
            {%- endif -%}
        </div>
      {%- endif -%}
    </div>
    {%- if section.settings.subcollections_list != blank -%}
      {%- if section.settings.subcollections_style == 'buttons' -%}
        <div class="subcollections__wrapper{% if section.settings.center_text %} center{% endif %} show-more-array">
          {%- for subcollection in section.settings.subcollections_list  -%}
            <div class="show-more-element subcollections__button button-block block__button{% if section.settings.button_style == 'link' %} block__button--link{% endif %} {% if section.settings.use_main_button %}button-block--main{% endif %} section-block">
              <a href="{{ subcollection.url }}"{% if section.settings.target_blank %} target="_blank"{% endif %} class="button {{ section.settings.button_style }}-button body-font {% if section.settings.use_main_button %} button--main{% if settings.use_heading_font_main_buttons %} heading-font-style{% endif %}{% if settings.uppercase_main_buttons %} uppercase{% endif %}{% else %} button--secondary{% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}{% endif %}">
                {% if section.settings.use_main_button %}
                    {% if settings.bolder_main_buttons_font %}<b>{% endif %}{{ subcollection.title | escape }}{% if settings.bolder_main_buttons_font %}</b>{% endif %}
                {% else %}
                    {% if settings.bolder_secondary_buttons_font %}<b>{% endif %}{{ subcollection.title | escape }}{% if settings.bolder_secondary_buttons_font %}</b>{% endif %}
                {% endif %}
              </a>
            </div>
            <br class="button-wrap">
          {%- endfor -%}
          <show-more-button class="show-more-button visually-hidden button-block block__button{% if section.settings.button_style == 'link' %} block__button--link{% endif %} {% if section.settings.use_main_button %}button-block--main{% endif %} section-block" data-show-desktop="3" data-show-mobile="3">
            <a href="#" tabindex="-1" class="button {{ section.settings.button_style }}-button body-font {% if section.settings.use_main_button %} button--main{% if settings.use_heading_font_main_buttons %} heading-font-style{% endif %}{% if settings.uppercase_main_buttons %} uppercase{% endif %}{% else %} button--secondary{% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}{% endif %}">
              {% if section.settings.use_main_button %}
                  {% if settings.bolder_main_buttons_font %}<b>{% endif %}{{ 'collection.view_all' | t }}{% if settings.bolder_main_buttons_font %}</b>{% endif %}
              {% else %}
                  {% if settings.bolder_secondary_buttons_font %}<b>{% endif %}{{ 'collection.view_all' | t }}{% if settings.bolder_secondary_buttons_font %}</b>{% endif %}
              {% endif %}
            </a>
          </show-more-button>
        </div>
      {%- else -%}
      <div class="subcollections-gallery">
        {{ 'section-banner-gallery.css' | asset_url | stylesheet_tag }}
        {%- liquid
          assign gallery_disable_max_width = false
          if section.settings.gallery_disable_max_width 
            assign gallery_disable_max_width = true
          elsif section.settings.gallery_grid_style == 'page' and settings.full_width_page_grid
            assign gallery_disable_max_width = true
          elsif section.settings.gallery_grid_style == 'alternative' and settings.full_width_alt_grid
            assign gallery_disable_max_width = true
          elsif section.settings.gallery_grid_style == 'secondary' and settings.full_width_second_grid
            assign gallery_disable_max_width = true
          endif
        
          assign gallery_max_width = '100vw'
          if gallery_disable_max_width == false and section.settings.gallery_grid_style == 'page'
              assign gallery_max_width = settings.page_width | append: 'px'
          elsif gallery_disable_max_width == false and section.settings.gallery_grid_style == 'alternative'
              assign gallery_max_width = settings.alt_grid_width | append: 'px'
          elsif gallery_disable_max_width == false and section.settings.gallery_grid_style == 'secondary'
              assign gallery_max_width = settings.second_grid_width | append: 'px'
          endif
        
          assign desktop_item_width = section.settings.desktop_item_width | times: 1
          assign desktop_item_size = desktop_item_width | floor
        -%}
        {% style %}
          #shopify-section-{{ section.id }} .subcollections-gallery {
            --vertical-position: {{ section.settings.gallery_vertical_content_position }};
            --aspect-ratio: {{ section.settings.gallery_media_ratio }};
            --overlay-opacity: {{ section.settings.gallery_overlay_opacity | divided_by: 100.0 }};
            --focal-point: {{ section.settings.gallery_focal_point }};
            {%- if section.settings.gallery_image_radius == 'default' -%}
                --image-radius: {{ settings.images_and_sections_radius }};
            {%- else -%}
                --image-radius: {{ section.settings.gallery_image_radius }};
            {%- endif -%}
            --reduce-items: 1;
            {% if section.settings.gallery_grid_style == 'page' %}
              --desktop-item-width: calc((100% - ({{ settings.page_column_gap }}px * ({{ desktop_item_size }} - var(--reduce-items)))) / ({{ desktop_item_width }} - (var(--reduce-items) - 1)));
            {% elsif section.settings.gallery_grid_style == 'alternative' %}
              --desktop-item-width: calc((100% - ({{ settings.alt_grid_column_gap }}px * ({{ desktop_item_size }} - var(--reduce-items)))) / ({{ desktop_item_width }} - (var(--reduce-items) - 1)));
            {% elsif section.settings.gallery_grid_style == 'secondary' %}
              --desktop-item-width: calc((100% - ({{ settings.second_grid_column_gap }}px * ({{ desktop_item_size }} - var(--reduce-items)))) / ({{ desktop_item_width }} - (var(--reduce-items) - 1)));
            {% endif %}
            {% if section.settings.disable_grid_gaps %}
              --desktop-item-width: calc(100% / ({{ desktop_item_width }} - (var(--reduce-items) - 1)));
            {% endif %}
          }
          {% if lazy_loading_images and section.settings.gallery_media_ratio == 'auto' %}
              #shopify-section-{{ section.id }} .subcollections-gallery .lazy-image {
                aspect-ratio: var(--asp-rat);
              }
          {% endif %}
          @media screen and (max-width: 1600px) {
            #shopify-section-{{ section.id }} .subcollections-gallery {
              {% if desktop_item_size == 8 %}
                --reduce-items: 2;
              {% endif %}
            }
            {% if desktop_item_size == 8 and section.settings.subcollections_list.count >= 7 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
          }
          @media screen and (max-width: 1400px) {
            #shopify-section-{{ section.id }} .subcollections-gallery {
              {% if desktop_item_size == 8 %}
                --reduce-items: 3;
              {% elsif desktop_item_size == 7 %}
                --reduce-items: 2;
              {% endif %}
            }
            {% if desktop_item_size == 8 and section.settings.subcollections_list.count >= 6 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
            {% if desktop_item_size == 7 and section.settings.subcollections_list.count >= 6 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
          }
          @media screen and (max-width: 1300px) {
            #shopify-section-{{ section.id }} .subcollections-gallery {
              {% if desktop_item_size == 8 %}
                --reduce-items: 4;
              {% elsif desktop_item_size == 7 %}
                --reduce-items: 3;
              {% elsif desktop_item_size == 6 %}
                --reduce-items: 2;
              {% endif %}
            }
            {% if desktop_item_size == 8 and section.settings.subcollections_list.count >= 5 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
            {% if desktop_item_size == 7 and section.settings.subcollections_list.count >= 5 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
            {% if desktop_item_size == 6 and section.settings.subcollections_list.count >= 5 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
          }
          @media screen and (max-width: 1100px) {
            #shopify-section-{{ section.id }} .subcollections-gallery {
              {% if desktop_item_size == 8 %}
                --reduce-items: 5;
              {% elsif desktop_item_size == 7 %}
                --reduce-items: 4;
              {% elsif desktop_item_size == 6 %}
                --reduce-items: 3;
              {% elsif desktop_item_size == 5 %}
                --reduce-items: 2;
              {% endif %}
            }
            {% if desktop_item_size == 8 and section.settings.subcollections_list.count >= 4 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
            {% if desktop_item_size == 7 and section.settings.subcollections_list.count >= 4 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
            {% if desktop_item_size == 6 and section.settings.subcollections_list.count >= 4 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
            {% if desktop_item_size == 5 and section.settings.subcollections_list.count >= 4 %}
              #shopify-section-{{ section.id }} .slider__grid--center {
                justify-content: flex-start;
              }
            {% endif %}
          }
          @media screen and (max-width: 1024px) {
            #shopify-section-{{ section.id }} .subcollections-gallery {
              --desktop-item-width: {{ section.settings.mobile_item_min_width }}px;
            }
            #shopify-section-{{ section.id }} .slider__grid--center {
              justify-content: flex-start;
            }
          }
          @media screen and (max-width: 768px) {
            #shopify-section-{{ section.id }} .subcollections-gallery {
              --overlay-opacity: {{ section.settings.mobile_gallery_overlay_opacity | divided_by: 100.0 }};
            }
          }
        {% endstyle %}
        <div class="subcollections-gallery__container {{ section.settings.gallery_grid_style }}-grid{% if gallery_disable_max_width %} disable-max-width{% endif %}{% if section.settings.gallery_center_text %} center{% endif %}">
          <slider-component id="GalleryViewer-{{ section.id }}" class="slider scroll-to-block">
            <div class="slider__viewport">
              <ul id="Slider-Gallery-{{ section.id }}" class="slider__grid {% if section.settings.alignment_fewer_items == 'center' and desktop_item_width > section.settings.subcollections_list.count %}slider__grid--center{% endif %}
                {% unless section.settings.disable_grid_gaps %}{{ section.settings.gallery_grid_style }}-grid-gaps{% endunless %} hide-scrollbar" role="list" 
                style="--desktop-columns: {{ desktop_item_width }};"
                data-count="{{ desktop_item_size }}"
                data-mobile-width="{{ section.settings.mobile_item_min_width }}">
                {% for subcollection in section.settings.subcollections_list %}
                  <li id="Slide-{{ section.id }}" class="slider__grid-item slider__grid-item--banners{% if forloop.first %} is-active{% endif %}">
                    <a href="{{ subcollection.url }}" {% if section.settings.target_blank %}target="_blank"{% endif %} aria-label="{{ subcollection.title | escape }}" class="{% if section.settings.gallery_vertical_content_position != 'below' %}banner-gallery__card color-{{ section.settings.gallery_banner_color_scheme }} aspect-ratio{% if section.settings.gallery_content_on_hover %} hover-content{% endif %}{% else %} banner-gallery__card--wrapper{% endif %}">
                      <div class="{% if section.settings.gallery_vertical_content_position == 'below' %}banner-gallery__card color-{{ section.settings.gallery_banner_color_scheme }} aspect-ratio{% else %} banner-gallery__card--wrapper{% endif %}">
                        {%- liquid
                          assign widths = '50, 75, 100, 150, 200, 300, 400, 600, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200'
                          assign img_class = "banner-gallery__image"
                        -%}
                        {%- capture sizes -%}
                            {% if gallery_disable_max_width %}
                                (max-width: 768px) {{ section.settings.mobile_item_min_width }}px, {{ gallery_max_width | divided_by: desktop_item_size }}vw
                            {% else %}
                                (max-width: 768px) {{ section.settings.mobile_item_min_width }}px, {{ gallery_max_width | divided_by: desktop_item_size }}px
                            {% endif %}
                        {%- endcapture -%}
                        {%- if subcollection.image != blank -%}
                          {% if lazy_loading_images %}
                            <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--asp-rat: {{ subcollection.image.aspect_ratio }};">
                          {% endif %}
                            {{
                              subcollection.image
                                | image_url: width: 1700
                                | image_tag:
                                sizes: sizes,
                                widths: widths,
                                class: img_class,
                                alt: subcollection.image.alt,
                                draggable: false,
                                loading: loading_images,
                                onload: onload_script
                            }}
                          {% if lazy_loading_images %}
                            {% if settings.images_loading != 'fade_scale' %}
                            <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                              <img 
                              alt="{{ subcollection.image.alt | escape }}" 
                              src="{{ subcollection.image | image_url: width: 10 }}"
                              draggable="false"
                              width="10" 
                              height="10">
                            </div>
                            {% endif %}
                        </figure>
                        {% endif %}
                        {%- elsif subcollection.products.size > 0 and subcollection.products.first.featured_image -%}
                          {% if lazy_loading_images %}
                            <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--asp-rat: {{ subcollection.products.first.featured_image.aspect_ratio }};">
                          {% endif %}
                            {{
                              subcollection.products.first.featured_image
                                | image_url: width: 1700
                                | image_tag:
                                sizes: sizes,
                                widths: widths,
                                class: img_class,
                                alt: subcollection.products.first.featured_image.alt,
                                draggable: false,
                                loading: loading_images,
                                onload: onload_script
                            }}
                          {% if lazy_loading_images %}
                            {% if settings.images_loading != 'fade_scale' %}
                            <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                              <img 
                              alt="{{ subcollection.products.first.featured_image.alt | escape }}" 
                              src="{{ subcollection.products.first.featured_image | image_url: width: 10 }}"
                              draggable="false"
                              width="10" 
                              height="10">
                            </div>
                            {% endif %}
                        </figure>
                        {% endif %}
                        {%- endif -%}
                      </div>
                        {%- liquid
                          assign gallery_uppercase_heading = false
                          if section.settings.gallery_heading_style == 'section-heading' and settings.uppercase_section_headings
                            assign gallery_uppercase_heading = true
                          elsif section.settings.gallery_heading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                            assign gallery_uppercase_heading = true
                          elsif section.settings.gallery_heading_style == 'subheading-font' and settings.uppercase_subheadings
                              assign gallery_uppercase_heading = true
                          elsif section.settings.gallery_heading_style == 'body-font' and settings.uppercase_body
                              assign gallery_uppercase_heading = true
                          elsif section.settings.gallery_heading_style == 'caption-font' and settings.uppercase_caption
                              assign gallery_uppercase_heading = true
                          endif
                        -%}
                        {%- if section.settings.gallery_vertical_content_position == 'below' -%}
                          {% style %}
                            #shopify-section-{{ section.id }} .banner-gallery__info {
                              --layout-bg-color: {{ section.settings.color_scheme.settings.layout_background_color.red }},{{ section.settings.color_scheme.settings.layout_background_color.green }},{{ section.settings.color_scheme.settings.layout_background_color.blue }};
                              {% if section.settings.color_scheme.settings.layout_background_gradient != empty %}
                                --bg-gradient: {{ section.settings.color_scheme.settings.layout_background_gradient }};
                              {% else %}
                                --bg-gradient: {{ section.settings.color_scheme.settings.layout_background_color }};
                              {% endif %}
                              --layout-text-color: {{ section.settings.color_scheme.settings.layout_text_color.red }},{{ section.settings.color_scheme.settings.layout_text_color.green }},{{ section.settings.color_scheme.settings.layout_text_color.blue }};
                              --layout-link-color: {{ section.settings.color_scheme.settings.layout_link_color.red }},{{ section.settings.color_scheme.settings.layout_link_color.green }},{{ section.settings.color_scheme.settings.layout_link_color.blue }};
                              --layout-highlighted-background: {{ section.settings.color_scheme.settings.layout_highlighted_background.red }},{{ section.settings.color_scheme.settings.layout_highlighted_background.green }},{{ section.settings.color_scheme.settings.layout_highlighted_background.blue }};
