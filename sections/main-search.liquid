{%- liquid
    assign disable_max_width = false
    if section.settings.disable_max_width 
      assign disable_max_width = true
    elsif section.settings.grid_style == 'page' and settings.full_width_page_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'alternative' and settings.full_width_alt_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'secondary' and settings.full_width_second_grid
      assign disable_max_width = true
    endif

    assign accent_price = false
    if settings.bolder_product_price and section.settings.card_content_style == 'regular'
      assign accent_price = true
    endif
    if settings.small_bolder_product_price and section.settings.card_content_style == 'small'
      assign accent_price = true
    endif
    assign use_accent_color_for_price = false
    if settings.use_accent_color_for_price and section.settings.card_content_style == 'regular'
      assign use_accent_color_for_price = true
    elsif settings.small_use_accent_color_for_price and section.settings.card_content_style == 'small'
      assign use_accent_color_for_price = true
    endif
    assign compare_at_price_color = 'sale'
    if section.settings.card_content_style == 'regular'
      assign compare_at_price_color = settings.compare_at_price_color
    elsif section.settings.card_content_style == 'small'
      assign compare_at_price_color = settings.small_compare_at_price_color
    endif
  
    assign max_width = '100vw'
    if disable_max_width == false and section.settings.grid_style == 'page'
      assign max_width = settings.page_width | append: 'px'
    elsif disable_max_width == false and section.settings.grid_style == 'alternative'
      assign max_width = settings.alt_grid_width | append: 'px'
    elsif disable_max_width == false and section.settings.grid_style == 'secondary'
      assign max_width = settings.second_grid_width | append: 'px'
    endif

    assign full_width = false
    if section.settings.full_width
      assign max_width = '100vw'
      assign full_width = true
    endif

    assign uppercase_heading = false
    if section.settings.heading_style == 'secondary-heading' and settings.uppercase_secondary_headings
        assign uppercase_heading = true
    elsif section.settings.heading_style == 'section-heading' and settings.uppercase_section_headings
        assign uppercase_heading = true
    elsif section.settings.heading_style == 'page-title' and settings.uppercase_page_titles
        assign uppercase_heading = true
    elsif section.settings.heading_style == 'subheading-font' and settings.uppercase_subheadings
        assign uppercase_heading = true
    elsif section.settings.heading_style == 'body-font' and settings.uppercase_body
        assign uppercase_heading = true
    elsif section.settings.heading_style == 'caption-font' and settings.uppercase_caption
        assign uppercase_heading = true
    endif

    assign selector_container = '#shopify-section-' | append: section.id

    assign onload_script = ''
    assign loading_images = ''
    if settings.images_loading != 'disable'
        assign onload_script = 'this.parentNode.classList.add("lazyloaded");' 
        assign loading_images = 'lazy'
    endif
-%}

{% style %}
    #shopify-section-{{ section.id }} {
        --grid-columns: {{ section.settings.desktop_columns }};
        --top-spacing: {{ section.settings.top_spacing }};
        --bottom-spacing: {{ section.settings.bottom_spacing }};
        --focal-point: {{ settings.product_focal_point }};
        --aspect-ratio: {{ settings.product_media_ratio }};
        --variant-swatches-radius: {{ settings.variant_swatches_radius }};
        --variant-thumbnail-aspect-ratio: {{ settings.variant_thumbnail_image_ratio }};
        --variant-thumbnail-focal-point: {{ settings.variant_thumbnail_focal_point }};
        --variant-thumbnail-radius: {{ settings.variant_thumbnail_radius }};
    }
    {%- if section.settings.enable_filtering -%}
      .filters-container {
        --swatches-aspect-ratio: {{ settings.swatches_image_ratio }};
        --swatches-focal-point: {{ settings.swatches_focal_point }};
        --swatches-radius: {{ settings.swatches_radius }};
        --thumbnail-aspect-ratio: {{ settings.thumbnail_image_ratio }};
        --thumbnail-focal-point: {{ settings.thumbnail_focal_point }};
        --thumbnail-radius: {{ settings.thumbnail_radius }};
        --thumbnail-size : {{ settings.thumbnail_size }}px;
      }
    {%- endif -%}
    #product-grid--{{ section.id }}.page-grid-gaps {
      grid-template-columns: repeat(var(--grid-columns), calc((100% - (var(--page-column-gap) * (var(--grid-columns) - 1))) / var(--grid-columns)));
    }
    .page-grid #product-grid--{{ section.id }}:not(.page-grid-gaps),
    .search-page-grid #product-grid--{{ section.id }}:not(.page-grid-gaps) {
      grid-template-columns: repeat(var(--grid-columns), calc(100% / var(--grid-columns)));
    }
    #product-grid--{{ section.id }}.alternative-grid-gaps {
        grid-template-columns: repeat(var(--grid-columns), calc((100% - (var(--alt-column-gap) * (var(--grid-columns) - 1))) / var(--grid-columns)));
    }
    .alternative-grid #product-grid--{{ section.id }}:not(.alternative-grid-gaps),
    .search-alternative-grid #product-grid--{{ section.id }}:not(.alternative-grid-gaps) {
        grid-template-columns: repeat(var(--grid-columns), calc(100% / var(--grid-columns)));
    }
    #product-grid--{{ section.id }}.secondary-grid-gaps {
        grid-template-columns: repeat(var(--grid-columns), calc((100% - (var(--second-column-gap) * (var(--grid-columns) - 1))) / var(--grid-columns)));
    }
    .secondary-grid #product-grid--{{ section.id }}:not(.secondary-grid-gaps),
    .search-secondary-grid #product-grid--{{ section.id }}:not(.secondary-grid-gaps) {
        grid-template-columns: repeat(var(--grid-columns), calc(100% / var(--grid-columns)));
    }
    #shopify-section-{{ section.id }} .article-card {
      --focal-point: {{ section.settings.post_focal_point }};
      --aspect-ratio: {{ section.settings.post_media_ratio }};
      {%- if section.settings.post_image_radius == 'default' -%}
        --image-radius: {{ settings.images_and_sections_radius }};
      {%- else -%}
        --image-radius: {{ section.settings.post_image_radius }};
      {%- endif -%}
    }
    {% if settings.images_loading != 'disable' and section.settings.post_media_ratio == 'auto' %}
      #shopify-section-{{ section.id }} .article-card .lazy-image {
        aspect-ratio: var(--asp-rat);
      }
    {% endif %}
    #shopify-section-{{ section.id }} .search-field {
      --search-field-radius: {{ section.settings.search_field_radius }};
    }
    {% if section.settings.desktop_columns == '5' %}
      @media screen and (max-width: 1200px) {
        #shopify-section-{{ section.id }} {
          --grid-columns: 4;
        }
      }
    {% endif %}
    {% if section.settings.desktop_columns == '5' or section.settings.desktop_columns == '4' %}
      @media screen and (max-width: 1024px) {
        #shopify-section-{{ section.id }} {
          --grid-columns: 3;
        }
      }
    {% endif %}
    @media screen and (max-width: 768px) {
      #shopify-section-{{ section.id }} {
        --grid-columns: {{ section.settings.mobile_columns }};
        {%- if section.settings.enable_filtering -%}
          --thumbnail-size: {{ settings.thumbnail_size_mobile }}px;
        {%- endif -%}
      }
      
    }
    {% if settings.product_media_ratio == 'auto' %}
            #shopify-section-{{ section.id }} .card-container--page {
                --aspect-ratio: 1/1;
            }
    {% endif %}
  
{% endstyle %}
<div class="section color-{{ section.settings.color_scheme }}">
    <div class="template-search section-container flex--column">
      <div class="side-margins">
        <div class="template-search__header template-header flex--column align-center">
            {%- if search.performed -%}
            <h1 class="search__heading {{ section.settings.heading_style }}{% if uppercase_heading %} uppercase{% endif %}{% if section.settings.heading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
              {% if section.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{% if search.results_count > 1 %}{{ 'templates.search.results_with_count_and_term.other' | t: count: search.results_count, terms: search.terms }}{% else %}{{ 'templates.search.results_with_count_and_term.one' | t: count: search.results_count, terms: search.terms }}{% endif %}{% if section.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
            </h1>
            {%- else -%}
            <h1 class="search__heading {{ section.settings.heading_style }}{% if uppercase_heading %} uppercase{% endif %}{% if section.settings.heading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
              {% if section.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ 'templates.search.search_title' | t }}{% if section.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
            </h1>
            {%- endif -%}
            <div class="template-search__search">
                <form action="{{ routes.search_url }}" method="get" role="search" class="search-modal__form">
                <div class="field search-field flex--row align-center{% if section.settings.fill_search_background %} search-field--filled{% endif %}{% if section.settings.show_search_outline %} search-field--outlined{% endif %}">
                    <input
                    class="search__input body-font{% if settings.uppercase_body %} uppercase{% endif %}"
                    id="Search-In-Template"
                    type="search"
                    name="q"
                    value="{{ search.terms | escape }}"
                    placeholder="{{ 'templates.search.placeholder' | t }}"
                    autocomplete="off"
                    {%- if settings.enable_quick_search %}
                        role="combobox"
                        aria-expanded="false"
                        aria-owns="predictive-search-results-list"
                        aria-controls="predictive-search-results-list"
                        aria-haspopup="listbox"
                        aria-autocomplete="list" 
                        autocorrect="off"
                        autocomplete="off"
                        autocapitalize="off"
                        spellcheck="false"
                    {% endif -%}
                    />
                    <button type="submit" class="search-field__icon" aria-label="{{ 'templates.search.search_for' | t: terms: search.terms }}" tabindex="-1">
                    <span class="search__icon icon icon--large">
                      {%- render 'glyphs_header', icon: 'search' -%}
                    </span>
                    </button>
                    <label class="visually-hidden" for="Search-In-Template" aria-hidden="true">{{ 'templates.search.search_title' | t }}</label>
                    <input type="hidden" name="options[prefix]" value="last"/>
                </div>
                </form>
            </div>
        </div>
      </div>
      {%- if search.performed -%}
          <div class="template-search__results 
            {%- if section.settings.enable_filtering and search.results_count > 0 %} {{ section.settings.filter_type }}-filter {% endif -%}
            {%- if section.settings.enable_filtering and section.settings.filter_type == 'vertical' %} side-margins {% if full_width %} vertical-filter--full-width {% endif %}{% endif -%} 
            {%- if section.settings.full_width == false %} {{ section.settings.grid_style }}-grid {% if disable_max_width %} disable-max-width {% endif %}{% else %} search-{{ section.settings.grid_style }}-grid {% endif -%}"
          >
          {%- if section.settings.enable_filtering and search.results_count > 0 -%}
            {{ 'component-facets.css' | asset_url | stylesheet_tag }}
            <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
            
            <div id="main-collection-filters" class="filters-container {% if section.settings.filter_type != 'vertical' %}side-margins{% endif %}" data-id="{{ section.id }}">
              {% render 'facets', enable_filtering: section.settings.enable_filtering, results: search, filter_type: section.settings.filter_type, disable_max_width: disable_max_width, label_style: section.settings.filter_label_style %}
            </div>
          {%- endif -%}
          {%- if search.results_count > 0 and section.settings.enable_filtering and section.settings.filter_type == 'vertical' or section.settings.filter_type == 'horizontal' -%}
            <div class="product__grid-container-wrapper">
              {% render 'facets-header', enable_filtering: section.settings.enable_filtering, results: search, filter_type: section.settings.filter_type, disable_max_width: disable_max_width, label_style: section.settings.filter_label_style %}
          {% endif %} 
          <div class="product-grid-container{% if section.settings.enable_filtering == false and section.settings.full_width == false %} side-margins{% endif %}">
              <div id="ProductGridContainer--{{  section.id }}">
              {% paginate search.results by section.settings.items_per_page %}
                  {%- if search.performed -%}
                  {%- if search.results_count == 0 -%}
                      <div class="collection{% if section.settings.enable_filtering and section.settings.filter_type != 'vertical' %} side-margins{% endif %}" id="product-grid--{{ section.id }}" data-id="{{ section.id }}">
                      <div class="title-wrapper center body-font{% if settings.uppercase_body %} uppercase{% endif %}">
                          <p class="title title--empty">
                          {%- liquid
                              if search.filters.size > 0
                              assign sort_by = search.sort_by | default: search.default_sort_by
                              assign search_url = '?q=' | append: search.terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
                              echo 'templates.search.no_results' | t: terms: search.terms
                              echo '<br/>'
                              echo 'templates.search.use_fewer_filters_html' | t: link: search_url, class: "link link--underline"
                              else
                              echo 'templates.search.no_results' | t: terms: search.terms
                              echo '<br/>'
                              endif
                          -%}
                          </p>
                      </div>
                      </div>
                  {%- else -%}
                      <div class="collection{% if section.settings.enable_filtering and section.settings.filter_type != 'vertical' and section.settings.full_width == false %} side-margins{% endif %}">
                      <ul id="product-grid--{{ section.id }}" data-id="{{ section.id }}" class="grid {% unless section.settings.disable_grid_gaps %}{{ section.settings.grid_style }}-grid-gaps{% endunless %}" role="list">
                          {%- for item in search.results -%}
                            {% assign lazy_load = 'eager' %}
                            {%- if forloop.index > 2 -%}
                              {%- assign lazy_load = 'lazy' -%}
                            {%- endif -%}
                          <li class="grid__item">
                              {%- case item.object_type -%}
                              {%- when 'product' -%}
                                {% render 'card-product',
                                  card_product: item,
                                  show_vendor: section.settings.show_vendor,
                                  show_title: section.settings.show_title,
                                  hover_behavior: section.settings.hover_behavior,
                                  mobile_behavior: section.settings.mobile_behavior,
                                  quick_buy: section.settings.quick_buy,
                                  price_position: section.settings.price_position,
                                  options_position: section.settings.options_position,
                                  desktop_options: section.settings.desktop_options,
                                  mobile_options: section.settings.mobile_options,
                                  max_product_name_characters: section.settings.max_product_name_characters,
                                  show_short_description: section.settings.show_short_description,
                                  show_rating: section.settings.show_rating,
                                  lazy_load: lazy_load,
                                  max_width: max_width,
                                  disable_max_width: disable_max_width,
                                  accent_price: accent_price,
                                  desktop_columns: section.settings.desktop_columns,
                                  mobile_columns: section.settings.mobile_columns,
                                  autoplay_speed: section.settings.autoplay_speed,
                                  product_card_color_scheme: section.settings.product_card_color_scheme,
                                  show_product_card_border: section.settings.show_product_card_border,
                                  index: forloop.index,
                                  complementary_block: false,
                                  card_content_style: section.settings.card_content_style,
                                  compare_at_price_color: compare_at_price_color, 
                                  use_accent_color_for_price: use_accent_color_for_price,
                                  parent_color_scheme: section.settings.color_scheme,
                                  full_width: full_width,
                                  selector_container: selector_container,
                                  grid_type: 'grid',
                                  show_bullets: section.settings.show_bullets,
                                  disable_grid_gaps: section.settings.disable_grid_gaps,
                                  show_pickup_availability: section.settings.show_pickup_availability
                                %}
                              {%- when 'article' -%}
                                  <div class="card-container">
                                  <div class="article-card__container">
                                      <a href="{{ item.url }}" class="article-card">
                                        {% if item.image %}
                                          {%- liquid
                                            assign widths = '50, 75, 100, 150, 200, 300, 400, 600, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200'
                                          -%}
                                          {%- capture sizes -%}
                                              {% if disable_max_width or full_width %}
                                                  (max-width: 768px) calc(100vw / {{ section.settings.mobile_columns }}), {{ max_width | divided_by: section.settings.desktop_columns }}vw
                                              {% else %}
                                                  (max-width: 768px) calc(100vw / {{ section.settings.mobile_columns }}), {{ max_width | divided_by: section.settings.desktop_columns }}px
                                              {% endif %}
                                          {%- endcapture -%}
                                          <div class="article-card__image aspect-ratio">
                                            {% if settings.images_loading != 'disable' %}
                                              <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--asp-rat: {{ item.image.aspect_ratio }};">
                                          {% endif %}
                                            {{
                                              item.image
                                              | image_url: width: 3200
                                              | image_tag:
                                              sizes: sizes,
                                              widths: widths,
                                              loading: lazy_load,
                                              alt: item.image.alt,
                                              draggable: false,
                                              loading: loading_images,
                                              onload: onload_script
                                          }}
                                          {% if settings.images_loading != 'disable' %}
                                            {% if settings.images_loading != 'fade_scale' %}
                                            <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                                              <img 
                                              alt="{{ item.image.alt | escape }}" 
                                              src="{{ item.image | image_url: width: 10 }}"
                                              draggable="false"
                                              width="10" 
                                              height="10">
                                            </div>
                                            {% endif %}
                                        </figure>
                                        {% endif %}
                                          </div>
                                        {% endif %}
                                        <div class="article-card__info">
                                          {%- if section.settings.show_date or section.settings.show_author or section.settings.show_number_of_comments and item.comments_count > 0 and item.comments_enabled? -%}
                                          <div class="article__info flex--row  body-font{% if settings.uppercase_body %} uppercase{% endif %}">
                                            {%- if section.settings.show_date -%}
                                                <span class="article__info-date">
                                                {{- item.published_at | date: format: 'abbreviated_date' -}}
                                                </span>
                                            {%- endif -%}
                                            {%- if section.settings.show_author -%}
                                                <span class="article__info-author">{{ item.author }}</span>
                                            {%- endif -%}
                                            {%- if section.settings.show_number_of_comments and item.comments_count > 0 and item.comments_enabled? -%}
                                                <span class="article__info-comments-count">{% if item.comments_count == 1 %}{{ 'blogs.article.comments.one' | t: count: item.comments_count }}{% else %}{{ 'blogs.article.comments.other' | t: count: item.comments_count }}{% endif %}</span>
                                            {%- endif -%}
                                          </div>
                                          {%- endif -%}
                                          <h3 class="article-card__title secondary-heading{% if settings.uppercase_secondary_headings %} uppercase{% endif %}" id="Article-{{ article.id }}">{{ item.title | escape }}</h3>
                                        </div>
                                      </a>
                                  </div>
                                  </div>
                              {%- when 'page' -%}
                              <div class="card-container card-container--page">
                                <div class="card-media--page aspect-ratio"></div>
                                <a href="{{ item.url }}" class="page-link secondary-heading{% if settings.uppercase_secondary_headings %} uppercase{% endif %}">
                                  <p>{{ item.title }}</p>
                                </a>
                              </div>
                              {%- endcase -%}
                          </li>
                          {%- endfor -%}
                      </ul>
                      {%- if paginate.pages > 1 -%}
                        {% if section.settings.full_width %}{% if section.settings.enable_filtering == false or section.settings.enable_filtering and section.settings.filter_type != 'vertical' %}<div class="side-margins">{% endif %}{% endif %}
                          {% render 'pagination', paginate: paginate, anchor: '', disable_max_width: disable_max_width, pagination_settings: section.settings, pagination_type: section.settings.pagination %}
                        {% if section.settings.full_width %}{% if section.settings.enable_filtering == false or section.settings.enable_filtering and section.settings.filter_type != 'vertical' %}</div>{% endif %}{% endif %}
                      {%- endif -%}
                      </div>
                  {%- endif -%}
                  {%- endif -%}
              {% endpaginate %}
              </div>
          </div>
          {%- if search.results_count > 0 and section.settings.enable_filtering and section.settings.filter_type == 'vertical' or section.settings.filter_type == 'horizontal' -%}
          </div>
          {% endif %} 
          </div>
      {%- endif -%} 
    </div>
</div>

{% schema %}
{
  "name": "t:sections.main-search.name",
  "tag": "section",
  "class": "section-main-search",
  "settings": [
    {
      "type": "range",
      "id": "items_per_page",
      "min": 3,
      "max": 48,
      "step": 1,
      "label": "t:sections.all.items_per_page.label",
      "default": 12
    },
    {
      "type": "select",
      "id": "desktop_columns",
      "options": [
        {
          "value": "2",
          "label": "t:sections.all.columns.options__2.label"
        },
        {
          "value": "3",
          "label": "t:sections.all.columns.options__3.label"
        },
        {
          "value": "4",
          "label": "t:sections.all.columns.options__4.label"
        },
        {
          "value": "5",
          "label": "t:sections.all.columns.options__5.label"
        }
      ],
      "default": "3",
      "label": "t:sections.all.columns.desktop_columns.label"
    },
    {
      "type": "select",
      "id": "mobile_columns",
      "options": [
        {
          "value": "1",
          "label": "t:sections.all.columns.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.all.columns.options__2.label"
        }
      ],
      "default": "1",
      "label": "t:sections.all.columns.mobile_columns.label"
    },
    {
      "type": "select",
      "id": "heading_style",
      "options": [
        {
          "value": "caption-font",
          "label": "t:sections.all.headings_style.options__6.label"
        },
        {
          "value": "body-font",
          "label": "t:sections.all.headings_style.options__1.label"
        },
        {
          "value": "subheading-font",
          "label": "t:sections.all.headings_style.options__2.label"
        },
        {
          "value": "secondary-heading",
          "label": "t:sections.all.headings_style.options__3.label"
        },
        {
          "value": "section-heading",
          "label": "t:sections.all.headings_style.options__4.label"
        },
        {
          "value": "page-title",
          "label": "t:sections.all.headings_style.options__5.label"
        }
      ],
      "default": "page-title",
      "label": "t:sections.all.headings_style.heading_style.label"
    },
    {
      "type": "header",
      "content": "t:sections.main-search.settings.search.content"
    },
    {
      "type": "checkbox",
      "id": "fill_search_background",
      "default": false,
      "label": "t:sections.header.settings.fill_search_background.label"
    },
    {
      "type": "checkbox",
      "id": "show_search_outline",
      "default": true,
      "label": "t:sections.header.settings.show_search_outline.label"
    },
    {
        "type": "select",
        "id": "search_field_radius",
        "options": [
          {
            "value": "0px",
            "label": "t:sections.all.corner_radius.options__1.label"
          },
          {
            "value": "3px",
            "label": "t:sections.all.corner_radius.options__2.label"
          },
          {
            "value": "6px",
            "label": "t:sections.all.corner_radius.options__3.label"
          },
          {
            "value": "12px",
            "label": "t:sections.all.corner_radius.options__4.label"
          },
          {
            "value": "16px",
            "label": "t:sections.all.corner_radius.options__5.label"
