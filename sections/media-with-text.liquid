{%- if section.settings.video_load != blank or section.settings.image != blank or section.blocks.size > 0 or request.design_mode -%}
{{ 'section-media-with-text.css' | asset_url | stylesheet_tag }}

{%- liquid
    assign disable_max_width = false
    if section.settings.disable_max_width 
      assign disable_max_width = true
    elsif section.settings.grid_style == 'page' and settings.full_width_page_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'alternative' and settings.full_width_alt_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'secondary' and settings.full_width_second_grid
      assign disable_max_width = true
    endif

    assign max_width = '100vw'
    if disable_max_width == false and section.settings.grid_style == 'page'
        assign max_width = settings.page_width | append: 'px'
    elsif disable_max_width == false and section.settings.grid_style == 'alternative'
        assign max_width = settings.alt_grid_width | append: 'px'
    elsif disable_max_width == false and section.settings.grid_style == 'secondary'
        assign max_width = settings.second_grid_width | append: 'px'
    endif

    if section.settings.full_width
      assign max_width = '100vw'
    endif

    assign inside_link = false
    if section.settings.link != blank
        assign inside_link = true
    endif

    if section.settings.media_size == 'large'
      assign media_size = 0.65
    elsif section.settings.media_size == 'half'
      assign media_size = 0.50
    elsif section.settings.media_size == 'small'
      assign media_size = 0.35
    endif

    assign widths = '100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000'
    assign desktop_img_class = "media-with-text__image media-with-text__image--desktop"
    assign mobile_img_class = "media-with-text__image media-with-text__image--mobile"
    assign fetchpriority = 'high'
    if section.index > 1 
      assign fetchpriority = 'auto'
    endif

    assign onload_script = ''
    assign loading_images = ''
    if settings.images_loading != 'disable'
        assign onload_script = 'this.parentNode.classList.add("lazyloaded");' 
        assign loading_images = 'lazy'
    elsif section.index > 2
      assign loading_images = 'lazy'
    endif
-%}

{% style %}
    #shopify-section-{{ section.id }} {
        --grid-columns: {% if section.settings.media_size == 'half' %}2{% else %}3{% endif %};
        --top-spacing: {{ section.settings.top_spacing }};
        --bottom-spacing: {{ section.settings.bottom_spacing }};
        --aspect-ratio: {{ section.settings.media_ratio }};
        --focal-point: {{ section.settings.focal_point }};
        --vertical-position: {{ section.settings.vertical_text_alignment }};
        --horizontal-position: {% if section.settings.horizontal_text_alignment == 'left' %}flex-start{% elsif section.settings.horizontal_text_alignment == 'center' %}center{% else %}flex-end{% endif %};
        --section-media-radius: {% if section.settings.section_framing == 'grid' and section.settings.full_width == false %}'0px'{% else %}{{ settings.images_and_sections_radius }}{% endif %};
        --video-controls-position: {{ section.settings.control_horizontal_position }};
        --sticky-offset: {{ section.settings.sticky_offset }}px;
    }
    {% if settings.images_loading != 'disable' and section.settings.media_ratio == 'auto' %}
      #shopify-section-{{ section.id }} .media-with-text__media-wrapper .lazy-image,
      #shopify-section-{{ section.id }} .media-with-text__media-wrapper .lazy-video {
        aspect-ratio: var(--asp-rat);
      }
    {% endif %}
    @media screen and (max-width: 768px) {
        #shopify-section-{{ section.id }} {
          --aspect-ratio: {{ section.settings.mobile_media_ratio }};
          --grid-columns: 1;
        }
        {% if settings.images_loading != 'disable' and section.settings.mobile_media_ratio == 'auto' %}
          #shopify-section-{{ section.id }} .media-with-text__media-wrapper .lazy-image,
          #shopify-section-{{ section.id }} .media-with-text__media-wrapper .lazy-video {
            aspect-ratio: var(--asp-rat);
          }
        {% endif %}
    }
{% endstyle %}

<div class="section{% if section.settings.section_framing == 'disable' or section.settings.full_width %} color-{{ section.settings.color_scheme }}{% endif %} side-margins{% if section.settings.full_width %} disable-margins{% endif %}{% if section.settings.show_bottom_line %} bottom-line{% endif %}{% if section.settings.full_width %} section--full-width{% endif %}">
    <div class="media-with-text section-container{% if section.settings.section_framing == 'grid' and section.settings.full_width == false %} {{ section.settings.grid_style }}-grid{% if disable_max_width %} disable-max-width{% endif %}{% endif %}{% if section.settings.section_framing == 'disable' or section.settings.full_width %} {{ section.settings.grid_style }}-grid{% if disable_max_width %} disable-max-width{% endif %}{% endif %}">
      {% if section.settings.section_framing != 'grid' and section.settings.full_width == false %}<div class="section-radius {% if section.settings.section_framing != 'disable' %}color-{{ section.settings.color_scheme }}{% endif %} elem-padding-l">{% endif %}
        {%- if section.settings.link != blank -%}<a href="{{ section.settings.link }}"{% if section.settings.target_blank %} target="_blank"{% endif %} class="media-with-text__card{% if section.settings.section_framing == 'grid' and section.settings.full_width == false %} fill-section-inside color-{{ section.settings.color_scheme }} {{ section.settings.grid_style }}-grid{% if disable_max_width %} disable-max-width{% endif %}{% else %} {{ section.settings.grid_style }}-grid-gaps{% endif %} grid {% if section.settings.section_framing == 'enable' and section.settings.full_width == false %} {{ section.settings.grid_style }}-grid{% if disable_max_width %} disable-max-width{% endif %}{% endif %}{% if section.settings.swap_media_position %} reverse-order{% endif %}">{%- else -%}
        <div class="media-with-text__card{% if section.settings.section_framing == 'grid' and section.settings.full_width == false %} fill-section-inside color-{{ section.settings.color_scheme }} {{ section.settings.grid_style }}-grid{% if disable_max_width %} disable-max-width{% endif %}{% else %} {{ section.settings.grid_style }}-grid-gaps{% endif %} grid
          {% if section.settings.section_framing == 'enable' and section.settings.full_width == false %} {{ section.settings.grid_style }}-grid{% if disable_max_width %} disable-max-width{% endif %}{% endif %}{% if section.settings.swap_media_position %} reverse-order{% endif %}">{%- endif -%}
            <div class="media-with-text__content{% if section.settings.media_size == 'small' %} column-merge{% endif %}{% if section.settings.section_framing == 'grid' and section.settings.full_width == false %} elem-padding-l{% endif %}{% if section.settings.swap_media_position %} left-media{% else %} right-media{% endif %}">
              <div class="media-with-text__content-wrapper {{ section.settings.content_width }} narrow-width-{{ section.settings.horizontal_text_alignment }} {{ section.settings.horizontal_text_alignment }}{% if section.settings.enable_sticky_content and section.settings.full_width or section.settings.section_framing == 'disable' or section.settings.section_framing != 'grid' and section.settings.section_framing != 'disable' %} sticky-content {% if section.settings.vertical_text_alignment == 'start' %}sticky-content--top{% elsif section.settings.vertical_text_alignment == 'center' %}sticky-content--center{% else %}sticky-content--bottom{% endif %}{% endif %}">
                    {%- for block in section.blocks -%}
                        {%- case block.type -%}
                            {%- when 'heading' -%}
                              {%- if block.settings.heading != blank -%}
                                {%- liquid
                                  assign uppercase_heading = false
                                  if block.settings.heading_style == 'caption-font' and settings.uppercase_caption
                                      assign uppercase_heading = true
                                  elsif block.settings.heading_style == 'body-font' and settings.uppercase_body
                                      assign uppercase_heading = true
                                  elsif block.settings.heading_style == 'subheading-font' and settings.uppercase_subheadings
                                      assign uppercase_heading = true
                                  elsif block.settings.heading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                      assign uppercase_heading = true
                                  elsif block.settings.heading_style == 'section-heading' and settings.uppercase_section_headings
                                      assign uppercase_heading = true
                                  elsif block.settings.heading_style == 'page-title' and settings.uppercase_page_titles
                                      assign uppercase_heading = true
                                  endif

                                  assign heading_text = block.settings.heading
                                  assign processed_text = ''
                                  assign split_text = heading_text | split: '['

                                  for part in split_text
                                    if part contains ']'
                                      assign split_bracket = part | split: ']'
                                      assign highlight_text = split_bracket[0]
                                      assign after_bracket = split_bracket[1]
                                      assign processed_text = processed_text | append: '<span class="highlight"><span>' | append: highlight_text | append: '</span></span>' | append: after_bracket
                                    else
                                      assign processed_text = processed_text | append: part
                                    endif
                                  endfor

                                  assign final_text = ''
                                  assign split_text_curly = processed_text | split: '{'

                                  for part in split_text_curly
                                    if part contains '}'
                                      assign split_curly = part | split: '}'
                                      assign styled_text = split_curly[0]
                                      assign after_curly = split_curly[1]
                                      assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                                    else
                                      assign final_text = final_text | append: part
                                    endif
                                  endfor
                                -%}
                                <{{ block.settings.heading_tag }} class="section-block custom-heading heading-block {{ block.settings.heading_style }}{% if uppercase_heading %} uppercase{% endif %}{% if block.settings.heading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}" {{ block.shopify_attributes }}>
                                  {% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ final_text }}{% if block.settings.heading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                </{{ block.settings.heading_tag }}>                                {%- endif -%}
                            {%- when 'subheading' -%}
                              {%- if block.settings.subheading != blank -%}
                                {%- liquid
                                  assign uppercase_subheading = false
                                  if block.settings.subheading_style == 'section-heading' and settings.uppercase_section_headings
                                    assign uppercase_subheading = true
                                  elsif block.settings.subheading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                    assign uppercase_subheading = true
                                  elsif block.settings.subheading_style == 'subheading-font' and settings.uppercase_subheadings
                                      assign uppercase_subheading = true
                                  elsif block.settings.subheading_style == 'body-font' and settings.uppercase_body
                                      assign uppercase_subheading = true
                                  elsif block.settings.subheading_style == 'caption-font' and settings.uppercase_caption
                                      assign uppercase_subheading = true
                                  endif
                                -%}
                                <{{ block.settings.subheading_tag }} class="section-block subheading-block {{ block.settings.subheading_style }}{% if uppercase_subheading %} uppercase{% endif %}{% if block.settings.subheading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}" {{ block.shopify_attributes }}>
                                  {% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ block.settings.subheading }}{% if block.settings.subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                </{{ block.settings.subheading_tag }}>
                              {%- endif -%}
                            {%- when 'text' -%}
                              {%- if block.settings.text != blank -%}
                                {%- liquid
                                  assign uppercase_text = false
                                  if block.settings.text_style == 'section-heading' and settings.uppercase_section_headings
                                      assign uppercase_text = true
                                  elsif block.settings.text_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                      assign uppercase_text = true
                                  elsif block.settings.text_style == 'subheading-font' and settings.uppercase_subheadings
                                      assign uppercase_text = true
                                  elsif block.settings.text_style == 'body-font' and settings.uppercase_body
                                      assign uppercase_text = true
                                  elsif block.settings.text_style == 'caption-font' and settings.uppercase_caption
                                      assign uppercase_text = true
                                  endif
                                -%}
                                <div class="section-block richtext rte link-underline {{ block.settings.text_style }}{% if uppercase_text %} uppercase{% endif %} 
                                {% if block.settings.text_style == 'subheading-font' %}{% if settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}{% if settings.bolder_subheadings_font %} bold{% endif %}{% endif %}" {{ block.shopify_attributes }}>
                                  {%- if section.settings.link != blank -%}<object>{% endif %}{{ block.settings.text }}{%- if section.settings.link != blank -%}</object>{% endif %}
                                </div>
                              {%- endif -%}
                            {%- when 'custom_liquid' -%}
                              {%- if block.settings.custom_liquid != blank -%}
                                {%- liquid
                                  assign uppercase_text = false
                                  if block.settings.text_style == 'section-heading' and settings.uppercase_section_headings
                                      assign uppercase_text = true
                                    elsif block.settings.text_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                      assign uppercase_text = true
                                    elsif block.settings.text_style == 'subheading-font' and settings.uppercase_subheadings
                                        assign uppercase_text = true
                                    elsif block.settings.text_style == 'body-font' and settings.uppercase_body
                                        assign uppercase_text = true
                                    elsif section.settings.text_style == 'caption-font' and settings.uppercase_caption
                                        assign uppercase_text = true
                                    endif
                                -%}
                                <div class="custom-liquid {{ block.settings.text_style }}{% if uppercase_text %} uppercase{% endif %} 
                                  {% if block.settings.text_style == 'subheading-font' %}{% if settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}{% if settings.bolder_subheadings_font %} bold{% endif %}{% endif %}" {{ block.shopify_attributes }}>
                                  {{ block.settings.custom_liquid }}
                                </div>
                              {%- endif -%}
                            {%- when 'icon' -%}
                              {%- liquid
                                render 'block-icon', block: block, inside_link: inside_link -%}
                            {%- when 'context_image' -%}
                                {%- liquid
                                  render 'context-image', location: block, block_shopify_attributes: true, section_block: true, inside_link: inside_link -%}
                            {%- when 'button' -%}
                                {%- liquid
                                  render 'button', block: block, inside_link: inside_link -%}
                            {%- when 'video_button' -%}
                                {%- render 'video-button', block: block -%}
                            {%- when 'empty_space' -%}
                                {%- render 'empty-space', block: block -%}
                            {%- when 'line' -%}
                                {%- render 'line', block: block -%}
                            {%- when 'promo_code' -%}
                                {%- render 'promo-code', block: block, promo_code: block.settings.promo_code -%}
                        {%- endcase -%}
                    {%- endfor -%}
              </div>
            </div>
            <div class="media-with-text__media{% if section.settings.media_size == 'large' %} column-merge{% endif %}{% if section.settings.enable_mute or section.settings.enable_pause %} video-controls-js{% endif %} {% if section.settings.swap_media_position %} media-with-text__media--left-media{% else %} media-with-text__media--right-media{% endif %}">
              {%- if section.settings.video_load != blank -%}
                {% if section.settings.enable_mute or section.settings.enable_pause %}
                  <video-controls class="video-controls {% if section.settings.media_size == 'large' %}elem-padding-m{% else %}elem-padding-s{% endif %}">
                    <div class="video-controls__wrapper flex--row">
                      {% if section.settings.enable_pause %}
                        <button class="button--controls icon icon--large button--pause play" aria-label="{{ 'accessibility.pause' | t }}">
                          <span class="icon--pause">{%- render 'glyphs_interface', icon: 'pause-circle' -%}</span>
                          <span class="icon--play">{%- render 'glyphs_interface', icon: 'play-circle' -%}</span>
                        </button>
                      {% endif %}
                      {% if section.settings.enable_mute %}
                        <button class="button--controls icon icon--large button--mute mute" aria-label="{{ 'accessibility.unmute' | t }}">
                          <span class="icon--mute">{%- render 'glyphs_interface', icon: 'mute' -%}</span>
                          <span class="icon--unmute">{%- render 'glyphs_interface', icon: 'sound-on' -%}</span>
                        </button>
                      {% endif %}
                    </div>
                  </video-controls>
                {% endif %}
              {%- endif -%}
                <div class="media-with-text__media-wrapper aspect-ratio"{% if settings.disable_right_click %} oncontextmenu="return false"{% endif %}>
                  {% liquid 
                    assign section_img = false
                    if section.settings.image != blank and section.settings.video_load == blank
                        assign section_img = true
                    endif
                    if section.settings.mobile_image != blank and section.settings.video_load == blank
                        assign section_img = true
                    endif
                  %}  
                  {%- if section.settings.video_load != blank -%}
                    {% if settings.images_loading == 'disable' %}
                      {{ section.settings.video_load | video_tag: image_size: "1100x", autoplay: false, preload: 'none', loop: true, muted: true, controls: false, alt: section.settings.video_load.alt }}
                    {% else %}
                      <figure class="lazy-video lazy-image--{{ settings.images_loading }}" style="--asp-rat: {{ section.settings.video_load.aspect_ratio }}">
                        {{ section.settings.video_load | video_tag: image_size: "1100x", autoplay: false, preload: 'none', loop: true, muted: true, controls: false, alt: section.settings.video_load.alt, oncanplay: 'this.parentNode.classList.add("lazyloaded");' }}
                        {% if settings.images_loading != 'fade_scale' %}
                        <div class="lazy-image__preloader lazy-image__preloader--full lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true" >
                            <img 
                                alt="{{ section.settings.video_load.alt | escape }}" 
                                src="{{ section.settings.video_load.preview_image | image_url: width: 10 }}"
                                draggable="false"
                                width="10" 
                                height="10">
                        </div>
                        {% endif %}
                    </figure>
                    {% endif %}
                    {%- elsif section_img -%}
                      {%- capture sizes -%}
                        {% if disable_max_width %}
                          (max-width: 768px) 100vw, {{ max_width | times: media_size | floor }}vw
                        {% else %}
                          (max-width: 768px) 100vw, (min-width: {{ max_width }}) {{ max_width | times: media_size }}px, {{ max_width | times: media_size }}px
                        {% endif %}
                      {%- endcapture -%}
                      {% if section.settings.image != blank %}
                        {% if settings.images_loading != 'disable' %}
                          <figure class="lazy-image lazy-image--{{ settings.images_loading }} {{ desktop_img_class }}" style="--asp-rat: {{ section.settings.image.aspect_ratio }}">
                        {% endif %}
                        {{
                            section.settings.image
                            | image_url: width: 3200
                            | image_tag:
                            sizes: sizes,
                            widths: widths,
                            class: desktop_img_class,
                            alt: section.settings.image.alt,
                            draggable: false,
                            fetchpriority: fetchpriority,
                            loading: loading_images,
                            onload: onload_script
                        }}
                        {% if settings.images_loading != 'disable' %}
                          {% if settings.images_loading != 'fade_scale' %}
                          <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                            <img 
                            alt="{{ section.settings.image.alt | escape }}" 
                            src="{{ section.settings.image | image_url: width: 10 }}"
                            draggable="false"
                            width="10" 
                            height="10">
                          </div>
                          {% endif %}
                      </figure>
                      {% endif %}
                      {% endif %}
                      {% if section.settings.mobile_image != blank %}
                        {% if settings.images_loading != 'disable' %}
                          <figure class="lazy-image lazy-image--{{ settings.images_loading }} {{ mobile_img_class }}" style="--asp-rat: {{ section.settings.mobile_image.aspect_ratio }}">
                        {% endif %}
                          {{
                              section.settings.mobile_image
                              | image_url: width: 3200
                              | image_tag:
                              sizes: sizes,
                              widths: widths,
                              class: mobile_img_class,
                              alt: section.settings.mobile_image.alt,
                              draggable: false,
                              fetchpriority: fetchpriority,
                              loading: loading_images,
                              onload: onload_script
                          }}
                          {% if settings.images_loading != 'disable' %}
                            {% if settings.images_loading != 'fade_scale' %}
                            <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                              <img 
                              alt="{{ section.settings.mobile_image.alt | escape }}" 
                              src="{{ section.settings.mobile_image | image_url: width: 10 }}"
                              draggable="false"
                              width="10" 
                              height="10">
                            </div>
                            {% endif %}
                        </figure>
                        {% endif %}
                      {% endif %}
                    {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                </div>
            </div>
          {% if section.settings.section_framing != 'disable' and section.settings.section_framing != 'grid' and section.settings.full_width == false %}</div>{% endif %}
        {%- if section.settings.link != blank -%}</a>{%- else -%}</div>{%- endif -%}
    </div>
</div>
{% endif %}

