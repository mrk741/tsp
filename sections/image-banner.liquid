                  {% if lazy_loading_images %}
                    <figure class="lazy-image lazy-image--absolut lazy-image--{{ settings.images_loading }} ">
                  {% endif %}
                  {{
                    section.settings.mobile_image
                    | image_url: width: 3200
                    | image_tag:
                    sizes: sizes,
                    widths: widths,
                    class: img_class,
                    alt: section.settings.mobile_image.alt,
                    draggable: false,
                    fetchpriority: fetchpriority,
                    loading: loading_images,
                    onload: onload_script
                  }}
                  {% if lazy_loading_images %}
                    {% if settings.images_loading != 'fade_scale' %}
                    <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                      <img 
                      alt="{{ section.settings.mobile_image.alt | escape }}" 
