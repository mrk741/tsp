        {%- if section.settings.link != blank -%}<a href="{{ section.settings.link }}"{% if section.settings.target_blank %} target="_blank"{% endif %} class="banner__wrapper{% if section.settings.content_under_image %} content-below{% endif %}{% if section.settings.content_on_hover %} hover-content{% endif %}{% if section.settings.enable_sticky_content %} has-sticky-content{% endif %}">
