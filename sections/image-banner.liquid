              {%- endif -%}
              {% if section.settings.first_image == blank and section.settings.second_image == blank and section.settings.mobile_image == blank %}
                <div class="image-banner__media-block"{% if settings.disable_right_click %} oncontextmenu="return false"{% endif %}>
