                                        {%- else -%}
                                            <span disabled class="button {{ block.settings.button_style_2 }}-button body-font{% if block.settings.use_main_button %} button--main{% if settings.use_heading_font_main_buttons %} heading-font-style{% endif %}{% if settings.uppercase_main_buttons %} uppercase{% endif %}{% else %} button--secondary{% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}{% endif %}{% if block.settings.swap_button_icon_2 %} icon--swap{% endif %}">
                                        {%- endif -%}
                                        {% if block.settings.button_icon_2 != blank %}
                                            {%- liquid
                                            assign icon_name = block.settings.button_icon_2 | split: '/'
                                            if icon_name.size == 3
                                             assign file_name = icon_name.first | append: '_' | append: icon_name[1]
                                            elsif icon_name.size == 2
                                                assign file_name = icon_name.first
                                            endif
