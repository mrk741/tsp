{%- liquid
    assign disable_max_width = false
    if section.settings.disable_max_width 
      assign disable_max_width = true
    elsif section.settings.grid_style == 'page' and settings.full_width_page_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'alternative' and settings.full_width_alt_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'secondary' and settings.full_width_second_grid
      assign disable_max_width = true
    endif

    assign max_width = '100vw'
    if disable_max_width == false and section.settings.grid_style == 'page'
      assign max_width = settings.page_width | append: 'px'
    elsif disable_max_width == false and section.settings.grid_style == 'alternative'
      assign max_width = settings.alt_grid_width | append: 'px'
    elsif disable_max_width == false and section.settings.grid_style == 'secondary'
      assign max_width = settings.second_grid_width | append: 'px'
    endif

    assign max_block_width = 100 | divided_by: section.settings.grid_columns | append: 'vw'

    if section.settings.block_headings_style == 'caption-font' and settings.uppercase_caption
        assign uppercase_heading = true
    elsif section.settings.block_headings_style == 'body-font' and settings.uppercase_body 
        assign uppercase_heading = true
    elsif section.settings.block_headings_style == 'subheading-font' and settings.uppercase_subheadings
        assign uppercase_heading = true
    elsif section.settings.block_headings_style == 'secondary-heading' and settings.uppercase_secondary_headings
        assign uppercase_heading = true
    elsif section.settings.block_headings_style == 'section-heading' and settings.uppercase_section_headings
        assign uppercase_heading = true
    endif
-%}

{% style %}
    #shopify-section-{{ section.id }} {
        --grid-columns: {{ section.settings.grid_columns }};
        --top-spacing: {{ section.settings.top_spacing }};
        --bottom-spacing: {{ section.settings.bottom_spacing }};
    }
    @media screen and (max-width: 1024px) {
      #shopify-section-{{ section.id }} {
        {% if section.settings.two_columns_mobile %}
            --grid-columns: 2;
        {% elsif section.settings.grid_columns == '4' %}
            --grid-columns: 2;
        {% elsif section.settings.grid_columns == '3' %}
            --grid-columns: 1;
        {% endif %}
      }
    }
    @media screen and (max-width: 500px) {
      #shopify-section-{{ section.id }} {
        {% if section.settings.two_columns_mobile %}
            --grid-columns: 2;
        {% else %}
            --grid-columns: 1;
        {% endif %}
      }
    }
{% endstyle %}

<div class="section footer color-{{ section.settings.color_scheme }}{% if section.settings.show_bottom_line %} full-bottom-line{% endif %}{% if section.settings.show_top_line %} full-top-line{% endif %}">
    <div class="section-container side-margins">
        <div class="grid {% if section.settings.two_columns_mobile %}mobile-two-columns{% endif %}
            {{ section.settings.grid_style }}-grid
            {{ section.settings.grid_style }}-grid-gaps
            {% if disable_max_width %}disable-max-width{% endif %}">
            {%- for block in section.blocks -%}
                {%- case block.type -%}
                    {% when 'text' %}
                        {%- if block.settings.text != blank -%}
                            <div class="footer__block flex--row" 
                                style="--desktop-width: {{  block.settings.desktop_width }}%; justify-content: {{ block.settings.horizontal_alignment }}; align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                                <div class="block-text block-with-width{% if block.settings.center_text %} center{% endif %}">
                                    {% liquid 
                                        assign uppercase = false
                                        if block.settings.text_style == 'body-font' and settings.uppercase_body 
                                            assign uppercase = true
                                        elsif block.settings.text_style == 'subheading-font' and settings.uppercase_subheadings
                                            assign uppercase = true
                                        elsif block.settings.text_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                            assign uppercase = true
                                        elsif block.settings.text_style == 'section-heading' and settings.uppercase_section_headings
                                            assign uppercase = true
                                        elsif block.settings.text_style == 'caption-font' and settings.uppercase_caption
                                            assign uppercase = true
                                        endif
                                    %}
                                    {% if block.settings.heading != blank %}
                                        {% liquid
                                            assign heading_text = block.settings.heading
                                            assign processed_text = ''
                                            assign split_text = heading_text | split: '['

                                            for part in split_text
                                                if part contains ']'
                                                assign split_bracket = part | split: ']'
                                                assign highlight_text = split_bracket[0]
                                                assign after_bracket = split_bracket[1]
                                                assign processed_text = processed_text | append: '<span class="highlight"><span>' | append: highlight_text | append: '</span></span>' | append: after_bracket
                                                else
                                                assign processed_text = processed_text | append: part
                                                endif
                                            endfor

                                            assign final_text = ''
                                            assign split_text_curly = processed_text | split: '{'

                                            for part in split_text_curly
                                                if part contains '}'
                                                assign split_curly = part | split: '}'
                                                assign styled_text = split_curly[0]
                                                assign after_curly = split_curly[1]
                                                assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                                                else
                                                assign final_text = final_text | append: part
                                                endif
                                            endfor
                                        %}
                                        <p class="block-heading custom-heading {{ section.settings.block_headings_style }}{% if uppercase_heading %} uppercase{% endif %}{% if section.settings.block_headings_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                                            {% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ final_text }}{% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                        </p>
                                    {% endif %}
                                    <div class="{{ block.settings.text_style }}{% if uppercase %} uppercase{% endif %} richtext rte link-underline 
                                        {% if block.settings.text_style == 'subheading-font' %}{% if settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}{% if settings.bolder_subheadings_font %} bold{% endif %}{% endif %}">
                                        {{ block.settings.text }}
                                    </div>
                                </div>
                            </div>
                          {%- endif -%}
                    {% when 'menu' %}
                        {% if block.settings.menu != blank %}
                            <div class="footer__block flex--row footer__block--menu" 
                                style="--desktop-width: {{  block.settings.desktop_width }}%; justify-content: {{ block.settings.horizontal_alignment }}; align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                                <div class="block-menu block-with-width{% if block.settings.center_text %} center{% endif %}">
                                    {% if block.settings.heading != blank %}
                                        {% liquid
                                            assign heading_text = block.settings.heading
                                            assign processed_text = ''
                                            assign split_text = heading_text | split: '['

                                            for part in split_text
                                                if part contains ']'
                                                assign split_bracket = part | split: ']'
                                                assign highlight_text = split_bracket[0]
                                                assign after_bracket = split_bracket[1]
                                                assign processed_text = processed_text | append: '<span class="highlight"><span>' | append: highlight_text | append: '</span></span>' | append: after_bracket
                                                else
                                                assign processed_text = processed_text | append: part
                                                endif
                                            endfor

                                            assign final_text = ''
                                            assign split_text_curly = processed_text | split: '{'

                                            for part in split_text_curly
                                                if part contains '}'
                                                assign split_curly = part | split: '}'
                                                assign styled_text = split_curly[0]
                                                assign after_curly = split_curly[1]
                                                assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                                                else
                                                assign final_text = final_text | append: part
                                                endif
                                            endfor
                                        %}
                                        <p class="block-heading custom-heading {{ section.settings.block_headings_style }}{% if uppercase_heading %} uppercase{% endif %}{% if section.settings.block_headings_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                                            {% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ final_text }}{% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                        </p>
                                    {% endif %}
                                    {% render 'menu', menu: block.settings.menu, horizontal_alignment: 'flex-start', object_type: block, event_type: section.settings.dropdown_event_type, show_nested: false, link_style: block.settings.link_style, uppercase: block.settings.uppercase, bolder_font: block.settings.bolder_font, dropdown_icon: false, menu_orientation: block.settings.menu_orientation %}
                                </div>
                            </div>
                        {% endif %}
                    {% when 'social_media' %}
                        {% if settings.instagram_link != blank or settings.x_link != blank or settings.tiktok_link != blank or settings.snapchat_link != blank or settings.pinterest_link != blank or settings.tumblr_link != blank or settings.youtube_link != blank or settings.vimeo_link != blank or settings.reddit_link != blank or settings.trustpilot_link != blank or settings.tripadvisor_link != blank or settings.telegram_link != blank or settings.linkedin_link != blank or settings.fb_messenger_link != blank or settings.discord_link != blank or settings.x_link != blank %}
                            <div class="footer__block flex--row" 
                                style="justify-content: {{ block.settings.horizontal_alignment }}; align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                                <div class="block-social-media flex--column{% if block.settings.center_text %} center{% endif %}">
                                    {% if block.settings.subheading != blank %}
                                        <p class="block-heading {{ section.settings.block_headings_style }}{% if uppercase_heading %} uppercase{% endif %}{% if section.settings.block_headings_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}{% if block.settings.alignment == 'center' %} center{% elsif block.settings.alignment == 'flex-end' %} right{% endif %}">
                                            {% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ block.settings.subheading }}{% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                        </p>
                                    {% endif %}
                                    {% render 'social-icons' %}
                                    {%- if shop.features.follow_on_shop? -%}
                                        <div class="follow-on-shop">
                                            <div class="footer__follow-on-shop">
                                                {% comment %} TODO: enable theme-check once `login_button` is accepted as valid filter {% endcomment %}
                                                {% # theme-check-disable %}
                                                {{ shop | login_button: action: 'follow' }}
                                                {% # theme-check-enable %}
                                            </div>
                                        </div>
                                    {%- endif -%}
                                </div>
                            </div>
                        {% endif %}
                    {% when 'block_image' %}
                        <div class="footer__block flex--row" 
                            style="align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                            <div {% if block.settings.center_text %}class="center"{% endif %}>
                                {% if block.settings.heading != blank %}
                                    {% liquid
                                        assign heading_text = block.settings.heading
                                        assign processed_text = ''
                                        assign split_text = heading_text | split: '['

                                        for part in split_text
                                            if part contains ']'
                                            assign split_bracket = part | split: ']'
                                            assign highlight_text = split_bracket[0]
                                            assign after_bracket = split_bracket[1]
                                            assign processed_text = processed_text | append: '<span class="highlight"><span>' | append: highlight_text | append: '</span></span>' | append: after_bracket
                                            else
                                            assign processed_text = processed_text | append: part
                                            endif
                                        endfor

                                        assign final_text = ''
                                        assign split_text_curly = processed_text | split: '{'

                                        for part in split_text_curly
                                            if part contains '}'
                                            assign split_curly = part | split: '}'
                                            assign styled_text = split_curly[0]
                                            assign after_curly = split_curly[1]
                                            assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                                            else
                                            assign final_text = final_text | append: part
                                            endif
                                        endfor
                                    %}
                                    <p class="block-heading custom-heading {{ section.settings.block_headings_style }}{% if uppercase_heading %} uppercase{% endif %}{% if section.settings.block_headings_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                                        {% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ final_text }}{% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                    </p>
                                {% endif %}
                                {%- render 'block-image', block: block, max_width: max_width, max_block_width: max_block_width -%}
                            </div>
                        </div>
                    {% when 'context_image' %}
                        <div class="footer__block flex--row" 
                            style="justify-content: {{ block.settings.horizontal_alignment }}; align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                            {%- render 'context-image', location: block, block_shopify_attributes: true, section_block: true -%}
                        </div>
                    {% when 'localization' %}
                        {% liquid 
                            assign enable_lang = false
                                if block.settings.enable_language and localization.available_languages.size > 1
                                    assign enable_lang = true
                                endif
                            assign enable_country = false
                                if block.settings.enable_country and localization.available_countries.size > 1
                                    assign enable_lang = true
                                endif
                        %}
                        {% if enable_lang or enable_country %}
                            <div class="footer__block flex--row" 
                                style="justify-content: {{ block.settings.horizontal_alignment }}; align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                                {% render 'localization', object_type: block, show_localization_chevron: block.settings.show_localization_chevron, localization_radius: block.settings.localization_radius, show_outline: block.settings.show_localization_outline, show_flag: block.settings.show_localization_flag %}
                            </div>
                        {% endif %}
                    {% when 'custom_liquid' %}
                        {%- if block.settings.custom_liquid != blank -%}
                            <div class="footer__block flex--row" 
                                style="align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                                <div class="custom-liquid body-font{% if settings.uppercase_body %} uppercase{% endif %}{% if block.settings.center_text %} center{% endif %}">
                                    {{ block.settings.custom_liquid }}
                                </div>
                            </div>
                        {%- endif -%}
                    {% when 'payment_methods' %}
                        <div class="footer__block flex--row" 
                            style="justify-content: {{ block.settings.horizontal_alignment }}; align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                            <div class="payment{% if block.settings.center_text %} center{% endif %}">
                                {% if block.settings.heading != blank %}
                                    {% liquid
                                        assign heading_text = block.settings.heading
                                        assign processed_text = ''
                                        assign split_text = heading_text | split: '['

                                        for part in split_text
                                            if part contains ']'
                                            assign split_bracket = part | split: ']'
                                            assign highlight_text = split_bracket[0]
                                            assign after_bracket = split_bracket[1]
                                            assign processed_text = processed_text | append: '<span class="highlight"><span>' | append: highlight_text | append: '</span></span>' | append: after_bracket
                                            else
                                            assign processed_text = processed_text | append: part
                                            endif
                                        endfor

                                        assign final_text = ''
                                        assign split_text_curly = processed_text | split: '{'

                                        for part in split_text_curly
                                            if part contains '}'
                                            assign split_curly = part | split: '}'
                                            assign styled_text = split_curly[0]
                                            assign after_curly = split_curly[1]
                                            assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                                            else
                                            assign final_text = final_text | append: part
                                            endif
                                        endfor
                                    %}
                                    <p class="block-heading custom-heading {{ section.settings.block_headings_style }}{% if uppercase_heading %} uppercase{% endif %}{% if section.settings.block_headings_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}{% if block.settings.alignment == 'center' %} center{% elsif block.settings.alignment == 'flex-end' %} right{% endif %}">
                                        {% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ final_text }}{% if section.settings.block_headings_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                                    </p>
                                {% endif %}
                                <ul class="payment__list flex--row" role="list">
                                {%- for type in shop.enabled_payment_types -%}
                                    <li class="payment__list-item">
                                    {{ type | payment_type_svg_tag }}
                                    </li>
                                {%- endfor -%}
                                </ul>
                            </div>
                        </div>
                    {% when 'newsletter' %}
                        <div class="footer__block flex--row{% if block.settings.center_text %} center{% endif %}" 
                            style="justify-content: {{ block.settings.horizontal_alignment }}; align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                            {%- render 'newsletter', block: block, uppercase_heading: uppercase_heading -%}
                        </div>
                    {%- when 'empty_space' -%}
                        <div class="footer__block">
                            {%- render 'empty-space', block: block -%}
                        </div>
                    {% when 'buttons' %}
                        {% if block.settings.button_label_1 != blank or block.settings.button_icon_1 != blank or block.settings.button_label_2 != blank or block.settings.button_icon_2 != blank or block.settings.button_label_3 != blank or block.settings.button_icon_3 != blank %}
                        <div class="footer__block flex--row" 
                                style="justify-content: {{ block.settings.horizontal_alignment }}; align-items: {{ block.settings.vertical_alignment }}; {% if block.settings.vertical_alignment == 'flex-start' %}--padding-top: {{ block.settings.desktop_padding }}px;{% elsif block.settings.vertical_alignment == 'flex-end' %}--padding-bottom: {{ block.settings.desktop_padding }}px;{% endif %}" {{ block.shopify_attributes }}>
                            <div class="buttons flex--row" style="justify-content: {{ block.settings.horizontal_alignment }};">
                                {%- if block.settings.button_label_1 != blank or block.settings.button_icon_1 != blank -%}
                                    <div class="button-block {% if block.settings.button_label_1 != blank and block.settings.button_icon_1 != blank %}button-block--small-padding{% endif %} block__button{% if block.settings.button_style_2 == 'link' %} block__button--link{% endif %}{% if block.settings.use_main_button %} button-block--main{% endif %}">
                                        {%- if block.settings.button_link_1 != blank  -%}
                                            <a href="{{ block.settings.button_link_1 }}"{% if block.settings.target_blank_1 %} target="_blank"{% endif %} class="button {{ block.settings.button_style_1 }}-button body-font{% if block.settings.use_main_button %} button--main{% if settings.use_heading_font_main_buttons %} heading-font-style{% endif %}{% if settings.uppercase_main_buttons %} uppercase{% endif %}{% else %} button--secondary{% if settings.use_heading_font_secondary_buttons %} heading-font-style{% endif %}{% if settings.uppercase_secondary_buttons %} uppercase{% endif %}{% endif %}{% if block.settings.swap_button_icon_1 %} icon--swap{% endif %}">
