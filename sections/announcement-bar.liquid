{% liquid 
    assign show_everywhere = false
    assign show_on_homepage = false
    assign show_on_inner_pages = false
    if section.settings.announcement_bar == 'show' 
        assign show_everywhere = true
    endif
    if section.settings.announcement_bar == 'show_on_homepage' and template.name == 'index'
        assign show_on_homepage = true
    endif
    if section.settings.announcement_bar == 'show_on_inner_pages' and template.name != 'index'
        assign show_on_inner_pages = true
    endif 
    assign enable_lang = false
        if section.settings.enable_language and localization.available_languages.size > 1
            assign enable_lang = true
        endif
    assign enable_country = false
        if section.settings.enable_country and localization.available_countries.size > 1
            assign enable_lang = true
        endif
    if enable_lang or enable_country
        assign show_localization = true
    endif
    if settings.instagram_link != blank or settings.x_link != blank or settings.tiktok_link != blank or settings.snapchat_link != blank or settings.pinterest_link != blank or settings.tumblr_link != blank or settings.youtube_link != blank or settings.vimeo_link != blank or settings.reddit_link != blank or settings.trustpilot_link != blank or settings.tripadvisor_link != blank or settings.telegram_link != blank or settings.linkedin_link != blank or settings.fb_messenger_link != blank or settings.discord_link != blank or settings.x_link != blank
        assign show_social_icons = true
    endif

    assign disable_max_width = false
    if section.settings.disable_max_width 
      assign disable_max_width = true
    elsif section.settings.grid_style == 'page' and settings.full_width_page_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'alternative' and settings.full_width_alt_grid
      assign disable_max_width = true
    elsif section.settings.grid_style == 'secondary' and settings.full_width_second_grid
      assign disable_max_width = true
    endif
%}

{% if show_everywhere or show_on_homepage or show_on_inner_pages %}
    {{ 'component-countdown-timer.css' | asset_url | stylesheet_tag }}
    {{ 'localization.css' | asset_url | stylesheet_tag }}
    {{ 'menu.css' | asset_url | stylesheet_tag }}   
      {% style %}
        #shopify-section-{{ section.id }} {
          --spacing: {{ section.settings.spacing }}px;
          --aspect-ratio: {{ section.settings.media_ratio }};
          --image-width: {{ section.settings.image_width }}px;
          --image-radius: {{ section.settings.image_radius }};
          --grid-columns: 1;
          {% if section.settings.menu != blank or section.settings.show_social_icons or section.settings.enable_language or section.settings.enable_country %}
            --grid-columns: 3;
          {% endif %}
          position: relative;
        }
        #shopify-section-{{ section.id }}:has( ~ .shopify-section-header) {
            z-index: 21;
        }
        @media screen and (max-width: 768px) {
            #shopify-section-{{ section.id }} {
                --grid-columns: 1;
            }
        }
        {% for block in section.blocks %}
            .swiper-slide-active.announcement-block-{{ block.id }} {
                --layout-text-color: {{ block.settings.color_scheme.settings.layout_text_color.red }},{{ block.settings.color_scheme.settings.layout_text_color.green }},{{ block.settings.color_scheme.settings.layout_text_color.blue }};
                --layout-bg-color: {{ block.settings.color_scheme.settings.layout_background_color.red }},{{ block.settings.color_scheme.settings.layout_background_color.green }},{{ block.settings.color_scheme.settings.layout_background_color.blue }};
                --layout-link-color: {{ block.settings.color_scheme.settings.layout_link_color.red }},{{ block.settings.color_scheme.settings.layout_link_color.green }},{{ block.settings.color_scheme.settings.layout_link_color.blue }};
                --layout-highlighted-background: {{ block.settings.color_scheme.settings.layout_highlighted_background.red }},{{ block.settings.color_scheme.settings.layout_highlighted_background.green }},{{ block.settings.color_scheme.settings.layout_highlighted_background.blue }};
            }
            #shopify-section-{{ section.id }}:has(.swiper-slide-active.announcement-block-{{ block.id }}) .announcement-bar {
                --layout-text-color: {{ block.settings.color_scheme.settings.layout_text_color.red }},{{ block.settings.color_scheme.settings.layout_text_color.green }},{{ block.settings.color_scheme.settings.layout_text_color.blue }};
                --layout-bg-color: {{ block.settings.color_scheme.settings.layout_background_color.red }},{{ block.settings.color_scheme.settings.layout_background_color.green }},{{ block.settings.color_scheme.settings.layout_background_color.blue }};
                --layout-accent-color: {{ block.settings.color_scheme.settings.layout_accent_color.red }},{{ block.settings.color_scheme.settings.layout_accent_color.green }},{{ block.settings.color_scheme.settings.layout_accent_color.blue }};
                --layout-link-color: {{ block.settings.color_scheme.settings.layout_link_color.red }},{{ block.settings.color_scheme.settings.layout_link_color.green }},{{ block.settings.color_scheme.settings.layout_link_color.blue }};
                --layout-highlighted-background: {{ block.settings.color_scheme.settings.layout_highlighted_background.red }},{{ block.settings.color_scheme.settings.layout_highlighted_background.green }},{{ block.settings.color_scheme.settings.layout_highlighted_background.blue }};
                {% if block.settings.color_scheme.settings.layout_background_gradient != empty %}
                    --bg-gradient: {{ block.settings.color_scheme.settings.layout_background_gradient }};
                {% else %} 
                    --bg-gradient: {{ block.settings.color_scheme.settings.layout_background_color }};
                {% endif %}
                --button-bg-color: {{ block.settings.color_scheme.settings.button_background_color.red }},{{ block.settings.color_scheme.settings.button_background_color.green }},{{ block.settings.color_scheme.settings.button_background_color.blue }};
                --button-label-color: {{ block.settings.color_scheme.settings.button_label_color.red }},{{ block.settings.color_scheme.settings.button_label_color.green }},{{ block.settings.color_scheme.settings.button_label_color.blue }};
                --button-hover-color: {{ block.settings.color_scheme.settings.button_hover_color.red }},{{ block.settings.color_scheme.settings.button_hover_color.green }},{{ block.settings.color_scheme.settings.button_hover_color.blue }};
                --lines-color: {{ block.settings.color_scheme.settings.lines_color.red }},{{ block.settings.color_scheme.settings.lines_color.green }},{{ block.settings.color_scheme.settings.lines_color.blue }};
                transition: background-color .6s var(--transition-timing-function);
            }
        {% endfor %}
      {% endstyle %}
    
    <div id="GalleryViewer-{{ section.id }}" class="announcement-bar color-{{ section.settings.color_scheme }} side-margins{% if section.settings.show_bottom_line %} full-bottom-line{% endif %}">
        <div class="announcement-bar-container {{ section.settings.grid_style }}-grid{% if disable_max_width %} disable-max-width{% endif %} grid announcement-bar-container--{{ section.blocks.size }}">
            {% if section.settings.menu != blank %}
                {% render 'menu', menu: section.settings.menu, object_type: section, event_type: section.settings.dropdown_event_type, blocks: section.blocks, show_nested: true, link_style: section.settings.text_style, uppercase: section.settings.uppercase, bolder_font: section.settings.bolder_font, dropdown_icon: section.settings.dropdown_icon %}
            {% endif %}
            <div class="announcement-bar-wrapper flex--row">
                <div class="announcement-bar__slider slider-wrapper swiper swiper-announcement" data-autoplay="{% if section.settings.enable_autoplay %}true{% else %}false{% endif %}" data-autoplay-speed="{{ section.settings.autoplay_speed | times: 1000.00 }}">
                    <ul class="swiper-wrapper announcement-blocks{% if section.settings.uppercase %} uppercase{% endif %}" id="Slider-Gallery-{{ section.id }}" data-count="1" {% if section.settings.enable_autoplay %}data-autoplay="{{ section.settings.autoplay_speed | times: 1000.00 }}"{% endif %}>
                        {%- for block in section.blocks -%}
                            {%- case block.type -%}
                            {%- when 'text', 'countdown_timer' -%}
                            {% if block.settings.desktop_text != blank or block.settings.mobile_text != blank or block.settings.image != blank or block.settings.icon != blank or block.settings.countdown_enable %}
                                <li class="announcement-block announcement-block-{{ block.id }} flex--row swiper-slide {% if section.settings.center_text %} center{% endif %}" id="{{ block.id }}" {{ block.shopify_attributes }}>
                                    {%- liquid
                                        assign uppercase = false
                                        if section.settings.text_style == 'caption-font' and settings.uppercase_caption
                                            assign uppercase = true
                                        elsif section.settings.text_style == 'body-font' and settings.uppercase_body
                                            assign uppercase = true
                                        elsif section.settings.text_style == 'subheading-font' and settings.uppercase_subheadings
                                            assign uppercase = true
                                        elsif section.settings.text_style == 'secondary-heading' and settings.uppercase_secondary_headings
                                            assign uppercase = true
                                        elsif section.settings.text_style == 'section-heading' and settings.uppercase_section_headings
                                            assign uppercase = true
                                        endif
                                    -%}
                                    {% if block.settings.image != blank or block.settings.icon != blank %}
                                        {% if block.settings.image != blank %}
                                            <div class="text-block__image aspect-ratio announcement-block__image--{{ block.id }}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                                                <img srcset="{%- if block.settings.image.width >= 80 -%}{{ block.settings.image | image_url: width: 80 }} 165w,{%- endif -%}
                                                {%- if block.settings.image.width >= 165 -%}{{ block.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                                                {%- if block.settings.image.width >= 375 -%}{{ block.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
                                                    {{ block.settings.image | image_url }} {{ block.settings.image.width }}w" 
                                                src="{{ block.settings.image | image_url: width: block.settings.image.width }}" 
                                                loading="eager"
                                                draggable="false"
                                                sizes="calc({{ section.settings.image_width }}px * 1.5)"
                                                width="{{ block.settings.image.width }}" 
                                                height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio | ceil }}" 
                                                alt="{{ block.settings.image.alt | default: shop.name | escape }}" 
                                                class="image__item"
                                                style="object-position: {{ block.settings.image.presentation.focal_point }}"/>
                                            </div>
                                        {% else %}
                                            <div class="text-block__icon">
                                                {%- liquid
                                                    assign icon_name = block.settings.icon | split: '/'
                                                    if icon_name.size == 3
                                                        assign file_name = icon_name.first | append: '_' | append: icon_name[1]
                                                    elsif icon_name.size == 2
                                                        assign file_name = icon_name.first
                                                    endif
                                                    assign icon = icon_name.last
                                                    assign color_rgb = block.settings.color | color_to_rgb | strip
                                                    assign mobile_color_rgb = block.settings.mobile_color | color_to_rgb | strip
                                                -%}
                                                <span class="icon-accordion icon-accordion--with-color" style="--color: {{ color_rgb }}; --mobile-color: {{ mobile_color_rgb }};">{% render 'catalog-icons', file_name: file_name, icon: icon %}</span>
                                            </div>
                                        {% endif %}
                                    {% endif %}

                                    <div class="announcement-bar__text-wrapper">
                                        {% if block.settings.desktop_text != blank or block.settings.mobile_text != blank %}
                                            <div class="text-block__content {{ section.settings.text_style }}{% if uppercase %} uppercase{% endif %}{% if section.settings.text_style == 'subheading-font' and settings.use_heading_font_subheadings  %} subheading-heading-font{% endif %}">
                                                {% if block.settings.desktop_text != blank %} 
                                                <div class="rte richtext text-block__item text-block__item--desktop link-underline {% if block.settings.mobile_text == blank %}text-block__item--desktop-visible{% endif %}{% if section.settings.bolder_font %} bold{% endif %}">{{ block.settings.desktop_text }}</div>
                                                {% endif %}
                                                {% if block.settings.mobile_text != blank %} 
                                                <div class="rte richtext text-block__item link-underline {% if block.settings.desktop_text != blank %}text-block__item--mobile{% endif %}{% if section.settings.bolder_font %} bold{% endif %}">{{ block.settings.mobile_text }}</div>
                                                {% endif %}
                                            </div>
                                        {% endif %}

                                        {% if block.settings.countdown_enable %}   
                                            <div class="text-block__content {{ section.settings.text_style }}">                     
                                                {%- render 'countdown-timer', block: block, section_id: section.id, minimized: true, is_part_of_block: true -%}    
                                            </div>       
                                        {% endif %} 
                                    </div>
                                </li>
                            {% endif %}
                            {%- endcase -%}
                        {%- endfor -%}
                    </ul>
                    {% if section.blocks.size > 1 %}
                        <div class="swiper-button-prev swiper-button-announcement"><span class="icon icon--small">{%- render 'glyphs_arrows', icon: 'chevron-left' -%}</span></div>
                        <div class="swiper-button-next swiper-button-announcement"><span class="icon icon--small">{%- render 'glyphs_arrows', icon: 'chevron-right' -%}</span></div>
                    {% endif %}
                </div>
            </div>
            {% if show_localization or section.settings.show_social_icons or section.settings.enable_store_selector %}
                <div class="announcement-bar__items flex--row">
                    {% if section.settings.enable_store_selector %}
                        {% render 'store-selector' %}
                    {% endif %}
                    {% if show_localization %}
                        {% render 'localization', object_type: section, show_localization_chevron: section.settings.show_localization_chevron, localization_radius: section.settings.localization_radius, show_outline: section.settings.show_localization_outline, show_flag: section.settings.show_localization_flag, uppercase: section.settings.uppercase, bolder_font: section.settings.bolder_font, font_style: section.settings.text_style %}
                    {% endif %}
                    {% if section.settings.show_social_icons and show_social_icons %}{% render 'social-icons' %}{% endif %}
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
    
