        "tag": "section",
        "class": "shopify-section-announcement-bar",
        "settings": [
            {
                "type": "select",
                "id": "announcement_bar",
                "options": [
                {
                    "value": "disable",
                    "label": "t:sections.announcement-bar.settings.announcement_bar.options__1.label"
