<div class="search-modal__banner search-modal__banner--{{ number }} flex--row color-{{ settings.search_banner_color_scheme }}">
    <{% if link != blank %}a{% else %}div{% endif %} {% if link != blank %} href="{{ link }}"{% else %} role="link" aria-disabled="true"{% endif %} class="search-modal__banner-wrapper flex--column content--{{ settings.search_vertical_content_position }} {% if image == blank %}content--below{% endif %}">
        {% if image == blank %}
            {% style %}
                .search-modal__information .search-modal__banner-content {
                    {% if settings.quick_search_style == 'drawer' %}
                        --layout-text-color: {{ settings.drawer_color_scheme.settings.layout_text_color.red }},{{ settings.drawer_color_scheme.settings.layout_text_color.green }},{{ settings.drawer_color_scheme.settings.layout_text_color.blue }};
                    {% else %}
                        --layout-text-color: {{ settings.search_color_scheme.settings.layout_text_color.red }},{{ settings.search_color_scheme.settings.layout_text_color.green }},{{ settings.search_color_scheme.settings.layout_text_color.blue }};
                    {% endif %}
                }
            {% endstyle %}
        {% endif %}
        <div class="search-modal__banner-image aspect-ratio" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
            {%- if image != blank -%}
                {%- liquid
                    assign widths = '300, 400, 600, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200'
                    assign img_class = "image__item"
                -%}
                {%- capture sizes -%}
                    {% if settings.quick_search_style == 'drawer' and settings.quick_search_width == 'regular' %}
                        (max-width: 640px) 100vw, {{ 640 | divided_by: drawer_column }}px
                    {% elsif settings.quick_search_style == 'drawer' and settings.quick_search_width == 'wide' %}
                        (max-width: 640px) 100vw, {{ 50 | divided_by: drawer_column }}vw
                    {% else %}
                    {% if disable_max_width %}
                        (max-width: 768px) 50vw, {{ max_width | divided_by: columns }}vw
                    {% else %}
                        (max-width: 768px) 50vw, {{ max_width | divided_by: columns }}px
                    {% endif %}
                    {% endif %}
                {%- endcapture -%}
                {% if settings.images_loading != 'disable' %}
                    <figure class="lazy-image lazy-image--{{ settings.images_loading }} " style="--asp-rat: {{ image.aspect_ratio }}">
                {% endif %}
                {{
                    image
                    | image_url: width: 1700
                    | image_tag:
                    sizes: sizes,
                    widths: widths,
                    class: img_class,
                    alt: image.alt,
                    draggable: false,
                    fetchpriority: 'low',
                    loading: loading_images,
                    onload: onload_script
                }}
                {% if settings.images_loading != 'disable' %}
                    {% if settings.images_loading != 'fade_scale' %}
                    <div class="lazy-image__preloader lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                      <img 
                      alt="{{ image.alt | escape }}" 
                      src="{{ image | image_url: width: 10 }}"
                      draggable="false"
                      width="10" 
                      height="10">
                    </div>
                    {% endif %}
                </figure>
                {% endif %}
            {%- endif -%}
        </div>
        {%- if subheading != blank or heading != blank -%}
            <div class="search-modal__banner-content{% if settings.search_center_banner_content %} center{% endif %} flex--column">
                {% if subheading != blank %}
                    {%- liquid
                        assign uppercase_subheading = false
                        if settings.search_banner_subheading_style == 'section-heading' and settings.uppercase_section_headings
                            assign uppercase_subheading = true
                        elsif settings.search_banner_subheading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                            assign uppercase_subheading = true
                        elsif settings.search_banner_subheading_style == 'subheading-font' and settings.uppercase_subheadings
                            assign uppercase_subheading = true
                        elsif settings.search_banner_subheading_style == 'body-font' and settings.uppercase_body
                            assign uppercase_subheading = true
                        elsif settings.search_banner_subheading_style == 'caption-font' and settings.uppercase_caption
                            assign uppercase_subheading = true
                        endif
                        -%}
                    <h6 class="search-modal__banner-subheading {{ settings.search_banner_subheading_style }}{% if uppercase_subheading %} uppercase{% endif %}{% if settings.search_banner_subheading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                        {% if settings.search_banner_subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ subheading }}{% if settings.search_banner_subheading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                    </h6>
                {% endif %}
                {% if heading != blank %}
                    {%- liquid
                        assign uppercase_heading = false
                        if settings.search_banner_heading_style == 'caption-font' and settings.uppercase_caption
                            assign uppercase_heading = true
                        elsif settings.search_banner_heading_style == 'secondary-heading' and settings.uppercase_secondary_headings
                            assign uppercase_heading = true
                        elsif settings.search_banner_heading_style == 'subheading-font' and settings.uppercase_subheadings
                            assign uppercase_heading = true
                        elsif settings.search_banner_heading_style == 'body-font' and settings.uppercase_body
                            assign uppercase_heading = true
                        elsif settings.search_banner_heading_style == 'section-heading' and settings.uppercase_section_headings
                            assign uppercase_heading = true
                        elsif settings.search_banner_heading_style == 'page-title' and settings.uppercase_page_titles
                            assign uppercase_heading = true
                        endif
                        -%}
                    <h5 class="search-modal__banner-heading {{ settings.search_banner_heading_style }}{% if uppercase_heading %} uppercase{% endif %}{% if settings.search_banner_heading_style == 'subheading-font' and settings.use_heading_font_subheadings %} subheading-heading-font{% endif %}">
                        {% if settings.search_banner_heading_style == 'subheading-font' and settings.bolder_subheadings_font %}<b>{% endif %}{{ heading }}{% if settings.search_banner_heading_style == 'subheading-font' and settings.bolder_subheadings_font %}</b>{% endif %}
                    </h5>
                {% endif %}
            </div>
        {%- endif -%}
    </{% if link != blank %}a{% else %}div{% endif %}>
</div>