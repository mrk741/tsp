  .ai-scotch-tape-{{ ai_gen_id }} {
    position: absolute;
    top: -18px;
    right: 25px;
    width: 70px;
    height: 35px;
    background: linear-gradient(135deg, 
      #f8f5ea 0%, 
      #f2ede0 15%, 
      #ede8d6 30%, 
      #e8e2cc 50%, 
      #e3dcc2 70%, 
      #ded6b8 85%, 
      #d9d0ae 100%);
    border-radius: 3px 2px 4px 1px;
    transform: rotate(15deg);
    z-index: 10;
    box-shadow: 
      0 3px 8px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      inset 0 -1px 0 rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(200, 185, 155, 0.4);
  }

  .ai-scotch-tape-{{ ai_gen_id }}:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      repeating-linear-gradient(
        88deg,
        transparent,
        transparent 3px,
        rgba(220, 210, 185, 0.12) 3px,
        rgba(220, 210, 185, 0.12) 6px
      ),
      repeating-linear-gradient(
        2deg,
        transparent,
        transparent 8px,
        rgba(200, 185, 155, 0.08) 8px,
        rgba(200, 185, 155, 0.08) 10px
      );
    border-radius: 3px 2px 4px 1px;
  }

  .ai-scotch-tape-{{ ai_gen_id }}:after {
    content: '';
    position: absolute;
    top: -3px;
    right: -4px;
    width: 12px;
    height: 12px;
    background: linear-gradient(45deg, #f8f5ea 0%, #e8e2cc 100%);
    transform: rotate(45deg);
    border-radius: 2px 1px 3px 1px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .ai-scotch-tape-alt-{{ ai_gen_id }} {
    position: absolute;
    top: -15px;
    right: 18px;
    width: 65px;
    height: 32px;
    background: linear-gradient(145deg, 
      #f5f2e8 0%, 
      #f0ede2 20%, 
      #ebe6d8 40%, 
      #e6dfce 60%, 
      #e1d8c4 80%, 
      #dcd1ba 100%);
    border-radius: 2px 4px 1px 3px;
    transform: rotate(-12deg);
    z-index: 10;
    box-shadow: 
      0 2px 6px rgba(0, 0, 0, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.25),
      inset 0 -1px 0 rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(195, 180, 150, 0.35);
  }

  .ai-scotch-tape-alt-{{ ai_gen_id }}:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      repeating-linear-gradient(
        82deg,
        transparent,
        transparent 4px,
        rgba(215, 205, 180, 0.1) 4px,
        rgba(215, 205, 180, 0.1) 7px
      ),
      repeating-linear-gradient(
        -8deg,
        transparent,
        transparent 9px,
        rgba(195, 180, 150, 0.06) 9px,
        rgba(195, 180, 150, 0.06) 11px
      );
    border-radius: 2px 4px 1px 3px;
  }

  .ai-scotch-tape-alt-{{ ai_gen_id }}:after {
    content: '';
    position: absolute;
    top: -2px;
    left: -3px;
    width: 10px;
    height: 10px;
    background: linear-gradient(30deg, #f5f2e8 0%, #e6dfce 100%);
    transform: rotate(30deg);
    border-radius: 1px 3px 2px 1px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.08);
