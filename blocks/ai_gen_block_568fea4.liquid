                {% if product.compare_at_price > product.price %}
                  <span class="ai-custom-section__compare-price-{{ ai_gen_id }}">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
              </div>
            {% else %}
              <h3 class="ai-custom-section__product-title-{{ ai_gen_id }}">Product {{ i }} title</h3>
              <div class="ai-custom-section__product-price-{{ ai_gen_id }}">PKR 0.00</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if block.settings.show_bottom_banner %}
      <div class="ai-custom-section__bottom-banner-{{ ai_gen_id }}">
        {% if block.settings.bottom_banner_video %}
          <video 
            class="ai-custom-section__video-{{ ai_gen_id }}"
            autoplay
            muted
            loop
            playsinline
          >
            <source src="{{ block.settings.bottom_banner_video }}" type="video/mp4">
          </video>
        {% elsif block.settings.bottom_banner_image %}
          <picture>
            {% if block.settings.bottom_banner_image_mobile %}
