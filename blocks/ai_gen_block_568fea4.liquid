              alt="{{ block.settings.bottom_banner_image.alt | escape }}"
              class="ai-custom-section__image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.bottom_banner_image.width }}"
              height="{{ block.settings.bottom_banner_image.height }}"
            >
          </picture>
        {% else %}
          <div class="ai-custom-section__placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.show_four_products %}
      <div class="ai-custom-section__four-products-{{ ai_gen_id }}">
        {% for i in (6..9) %}
          {% liquid
            assign product_key = 'product_' | append: i
            assign product_video_key = 'product_' | append: i | append: '_video'
            assign product_image_mobile_key = 'product_' | append: i | append: '_image_mobile'
            assign product = block.settings[product_key]
            assign product_video = block.settings[product_video_key]
            assign product_image_mobile = block.settings[product_image_mobile_key]
          %}
          
          <div class="ai-custom-section__four-product-card-{{ ai_gen_id }}">
            <div class="ai-custom-section__four-product-image-{{ ai_gen_id }}">
              {% if product_video %}
                <video 
                  class="ai-custom-section__video-{{ ai_gen_id }}"
                  autoplay
                  muted
                  loop
                  playsinline
                >
                  <source src="{{ product_video }}" type="video/mp4">
                </video>
              {% elsif product.featured_image %}
                <picture>
                  {% if product_image_mobile %}
                    <source media="(max-width: 749px)" srcset="{{ product_image_mobile | image_url: width: 400 }}">
                  {% endif %}
                  <img
                    src="{{ product.featured_image | image_url: width: 500 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-custom-section__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="{{ product.featured_image.width }}"
                    height="{{ product.featured_image.height }}"
                  >
                </picture>
              {% else %}
                <div class="ai-custom-section__placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            
            {% if product %}
              <h3 class="ai-custom-section__product-title-{{ ai_gen_id }}">
                {{ product.title }}
              </h3>
              
              <div class="ai-custom-section__product-price-{{ ai_gen_id }}">
                {{ product.price | money }}
